@model GymManagmentBLL.ViewModels.MemberViewModel.MemberViewModel
@{
    ViewData["Title"] = "Health Record History";
}

<div class="row justify-content-center">
    <div class="col-xl-8">
        <div class="row mb-4 align-items-center">
            <div class="col-md-6">
                <nav aria-label="breadcrumb">
                    <ol class="breadcrumb mb-1">
                        <li class="breadcrumb-item"><a asp-action="Details" asp-route-id="@Model.Id">Profile</a></li>
                        <li class="breadcrumb-item active">Health History</li>
                    </ol>
                </nav>
                <h2 class="fw-bold mb-0">Record for @Model.Name</h2>
            </div>
            <div class="col-md-6 text-md-end">
                <a asp-action="Details" asp-route-id="@Model.Id" class="btn btn-light border">
                    <i class="fas fa-arrow-left me-1"></i> Back to Profile
                </a>
            </div>
        </div>

        <div class="premium-card p-0 overflow-hidden">
            <div class="p-4 bg-light border-bottom">
                <h5 class="fw-bold mb-0"><i class="fas fa-history me-2 text-primary"></i> Assessment Timeline</h5>
            </div>
            
            <div class="table-responsive">
                <table class="table table-hover align-middle mb-0">
                    <thead class="bg-light bg-opacity-50">
                        <tr>
                            <th class="ps-4">Date</th>
                            <th>Weight</th>
                            <th>Height</th>
                            <th>Blood Type</th>
                            <th class="text-end pe-4">Status</th>
                        </tr>
                    </thead>
                    <tbody>
                        <tr>
                            <td class="ps-4">@DateTime.Now.ToShortDateString()</td>
                            <td><span class="fw-bold">@(Model.HealthRecord?.Weight ?? 0)</span> kg</td>
                            <td><span class="fw-bold">@(Model.HealthRecord?.Height ?? 0)</span> cm</td>
                            <td><span class="badge bg-danger bg-opacity-10 text-danger">@(Model.HealthRecord?.BloodType ?? "N/A")</span></td>
                            <td class="text-end pe-4">
                                <span class="badge bg-success">Current Baseline</span>
                            </td>
                        </tr>
                    </tbody>
                </table>
            </div>

            <div class="p-4 text-center border-top">
                <p class="text-secondary small mb-0">Historical records are currently being archived. Only the latest physical assessment is displayed.</p>
            </div>
        </div>
    </div>
</div>
