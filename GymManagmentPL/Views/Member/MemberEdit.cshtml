@model MemberToUpdateViewModel

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card card-details border-0 p-2 shadow">
                <div class="card-body text-center">
                    <div class="text-center mt-3 position-relative d-inline-block">
                        <img id="photoPreview" src="~/images/members/@Model.Photo" alt="@Model.Name" class="rounded-circle"
                             style="width: 120px; height: 120px; object-fit: cover; border: 3px solid #fff; margin-top: -60px;" />
                        <label for="photoInput" class="position-absolute bottom-0 end-0 bg-primary text-white rounded-circle d-flex align-items-center justify-content-center" 
                               style="width: 35px; height: 35px; cursor: pointer; border: 2px solid #fff;">
                            <i class="bi bi-camera-fill"></i>
                        </label>
                    </div>
                    <div class="card-body text-center">
                        <h2 class="mb-1 text-primary-color">@Model.Name</h2>
                        <form asp-action="MemberEdit" method="post" enctype="multipart/form-data">
							<input type="hidden" asp-for="Photo" />
							<input type="hidden" asp-for="Name" />
                            <input type="file" id="photoInput" asp-for="PhotoFile" class="d-none" accept="image/*" />
                            <span asp-validation-for="PhotoFile" class="text-danger d-block"></span>
                            <small class="form-text text-muted d-block mb-3">Max size: 3 MB. Allowed types: JPG, PNG, JPEG</small>
                            
                            <div class="mt-4 text-start">
                                <div class="row g-3">
                                    <div class="col-12">
                                        <div class="p-3 bg-light rounded">
                                            <small class="text-muted d-block mb-1">Email</small>
                                            <input asp-for="Email" class="form-control" />
                                            <span asp-validation-for="Email" class="text-danger"></span>
                                        </div>
                                    </div>
                                    <div class="col-6">
                                        <div class="p-3 bg-light rounded">
                                            <small class="text-muted d-block mb-1">Phone</small>
                                            <input asp-for="Phone" class="form-control" />
                                            <span asp-validation-for="Phone" class="text-danger"></span>
                                        </div>
                                    </div>

                                    <div class="col-6">
                                        <div class="p-3 bg-light rounded">
                                            <small class="text-muted d-block mb-1">Building Number</small>
                                            <input asp-for="BuildingNumber" class="form-control" />
                                            <span asp-validation-for="BuildingNumber"
                                                  class="text-danger"></span>
                                        </div>
                                    </div>
                                    <div class="col-6">
                                        <div class="p-3 bg-light rounded">
                                            <small class="text-muted d-block mb-1">City</small>
                                            <input asp-for="City" class="form-control" />
                                            <span asp-validation-for="City" class="text-danger"></span>
                                        </div>
                                    </div>
                                    <div class="col-6">
                                        <div class="p-3 bg-light rounded">
                                            <small class="text-muted d-block mb-1">Street</small>
                                            <input asp-for="Street" class="form-control" />
                                            <span asp-validation-for="Street" class="text-danger"></span>
                                        </div>
                                    </div>
                                </div>
                            </div>


                            <div class="d-flex justify-content-between gap-2 mt-3 px-3 pb-3">
                                <a asp-controller="Member" asp-action="Index" class="btn btn-fill ">
                                    Back to
                                    List
                                </a>
                                <button type="submit" class="btn btn-fill ">Done</button>
                            </div>
                        </form>
                    </div>
                </div>

            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script>
        document.getElementById('photoInput').addEventListener('change', function(e) {
            var file = e.target.files[0];
            if (file) {
                var reader = new FileReader();
                reader.onload = function(e) {
                    var preview = document.getElementById('photoPreview');
                    preview.src = e.target.result;
                }
                reader.readAsDataURL(file);
            }
        });
    </script>
}