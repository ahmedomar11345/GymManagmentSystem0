@model IEnumerable<GymManagmentBLL.ViewModels.StoreViewModel.StorePurchaseHistoryViewModel>
@inject IStringLocalizer<SharedResource> Localizer
@{
    ViewData["Title"] = Localizer["PurchaseHistory"];
    var isRtl = System.Globalization.CultureInfo.CurrentUICulture.TextInfo.IsRightToLeft;
    var settings = await (ViewContext.HttpContext.RequestServices.GetService<GymManagmentBLL.Service.Interfaces.IGymSettingsService>()!).GetSettingsAsync();
    var currency = settings?.Currency ?? "EGP";
}

@section Styles {
    <style>
        .stat-card-premium {
            background: #ffffff;
            border-radius: var(--radius-md);
            border: 1px solid #e2e8f0;
            transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
        }
        .stat-card-premium:hover {
            transform: translateY(-4px);
            box-shadow: var(--shadow-md);
        }
        .filter-glass {
            background: #ffffff;
            border-radius: var(--radius-md);
            border: 1px solid #e2e8f0;
            box-shadow: var(--shadow-sm);
        }
        .purchase-table {
            border-radius: var(--radius-md);
            overflow: hidden;
        }
        .purchase-table thead th {
            background-color: #f1f5f9;
            color: #475569;
            font-weight: 600;
            border-bottom: 1px solid #e2e8f0;
            text-transform: uppercase;
            font-size: 0.75rem;
            letter-spacing: 0.05em;
            padding: 1.25rem 1rem;
        }
        .purchase-table tbody td {
            padding: 1.25rem 1rem;
            border-bottom: 1px solid #f1f5f9;
        }

        /* Supplier Badge */
        .badge-supplier {
            background-color: #f8fafc;
            color: #475569;
            border: 1px solid #e2e8f0;
            font-weight: 600;
        }

        /* Action Buttons */
        .btn-action-glass {
            background: #f1f5f9;
            color: #475569;
            border: 1px solid #e2e8f0;
            transition: all 0.2s;
        }
        .btn-action-glass:hover {
            background: #e2e8f0;
            color: var(--primary);
        }
        
        [data-theme='dark'] .stat-card-premium,
        [data-theme='dark'] .filter-glass {
            background: var(--dark-surface);
            border-color: var(--dark-border);
        }
        [data-theme='dark'] .purchase-table thead th {
            background: rgba(255, 255, 255, 0.03);
            color: #94a3b8;
        }
        [data-theme='dark'] .purchase-table tbody td {
            border-color: rgba(255, 255, 255, 0.05);
            color: #cbd5e1;
        }
        [data-theme='dark'] .form-select, [data-theme='dark'] .form-control {
            background-color: var(--dark-bg);
            border-color: var(--dark-border);
            color: #f1f5f9;
        }
        [data-theme='dark'] .badge-supplier {
            background-color: rgba(255, 255, 255, 0.05);
            color: #94a3b8;
            border-color: rgba(255, 255, 255, 0.1);
        }
        [data-theme='dark'] .btn-action-glass {
            background: rgba(255, 255, 255, 0.05);
            color: #cbd5e1;
            border-color: rgba(255, 255, 255, 0.1);
        }
        [data-theme='dark'] .btn-action-glass:hover {
            background: var(--primary);
            color: white;
            border-color: var(--primary);
        }
    </style>
}

<div class="animate-fade-in py-4">
    <!-- Header -->
    <div class="d-flex flex-column flex-md-row align-items-md-center justify-content-between gap-4 mb-5">
        <div class="d-flex align-items-center gap-4">
            <div class="icon-shape bg-primary text-white shadow-lg rounded-3 d-flex align-items-center justify-content-center" style="width: 56px; height: 56px;">
                <i class="fas fa-file-invoice fs-4"></i>
            </div>
            <div>
                <h1 class="h3 fw-bold mb-1">@Localizer["PurchaseHistory"]</h1>
                <p class="text-secondary mb-0 small opacity-80">@Localizer["PurchaseHistoryDesc"]</p>
            </div>
        </div>
        
        <div class="d-flex gap-3">
            <a asp-action="Index" class="btn btn-outline-primary rounded-pill px-4 fw-bold transition-all">
                <i class="fas @(isRtl ? "fa-arrow-right" : "fa-arrow-left") me-2"></i> @Localizer["BackToStore"]
            </a>
            <a asp-action="CreatePurchase" class="btn btn-primary rounded-pill px-4 fw-bold shadow-lg hover-up">
                <i class="fas fa-plus-circle me-2"></i> @Localizer["RecordNewPurchase"]
            </a>
        </div>
    </div>

    <!-- Stats Summary -->
    <div class="row g-4 mb-5">
        <div class="col-md-4">
            <div class="stat-card-premium p-4 border-start border-primary border-4 shadow-sm">
                <div class="d-flex align-items-center gap-3 mb-3">
                    <div class="bg-primary bg-opacity-10 text-primary rounded-3 p-2">
                        <i class="fas fa-clipboard-list"></i>
                    </div>
                    <span class="text-secondary x-small fw-bold text-uppercase">@Localizer["TotalPurchasesCount"]</span>
                </div>
                <h3 class="fw-bold mb-0">@Model.Count()</h3>
            </div>
        </div>
        <div class="col-md-4">
            <div class="stat-card-premium p-4 border-start border-success border-4 shadow-sm">
                <div class="d-flex align-items-center gap-3 mb-3">
                    <div class="bg-success bg-opacity-10 text-success rounded-3 p-2">
                        <i class="fas fa-wallet"></i>
                    </div>
                    <span class="text-secondary x-small fw-bold text-uppercase">@Localizer["TotalInvestment"]</span>
                </div>
                <h3 class="fw-bold mb-0 text-success">@currency @Model.Sum(p => p.TotalPrice).ToString("N0")</h3>
            </div>
        </div>
        <div class="col-md-4">
            <div class="stat-card-premium p-4 border-start border-info border-4 shadow-sm">
                <div class="d-flex align-items-center gap-3 mb-3">
                    <div class="bg-info bg-opacity-10 text-info rounded-3 p-2">
                        <i class="fas fa-chart-line"></i>
                    </div>
                    <span class="text-secondary x-small fw-bold text-uppercase">@Localizer["AvgUnitCost"]</span>
                </div>
                <h3 class="fw-bold mb-0">@currency @(Model.Any() ? Model.Average(p => p.UnitPrice).ToString("N0") : "0")</h3>
            </div>
        </div>
    </div>

    <!-- Filters -->
    <div class="filter-glass p-4 mb-4">
        <form method="get" class="row g-3 align-items-end">
            <div class="col-md-3">
                <label class="form-label x-small fw-bold text-uppercase opacity-75">@Localizer["Product"]</label>
                <select name="productId" asp-items="ViewBag.Products" class="form-select border shadow-none rounded-3">
                    <option value="">@Localizer["AllProducts"]</option>
                </select>
            </div>
            <div class="col-md-3">
                <label class="form-label x-small fw-bold text-uppercase opacity-75">@Localizer["Supplier"]</label>
                <select name="supplierId" asp-items="ViewBag.Suppliers" class="form-select border shadow-none rounded-3">
                    <option value="">@Localizer["AllSuppliers"]</option>
                </select>
            </div>
            <div class="col-md-2">
                <label class="form-label x-small fw-bold text-uppercase opacity-75">@Localizer["From"]</label>
                <input type="date" name="from" value="@ViewBag.From" class="form-control border shadow-none rounded-3" />
            </div>
            <div class="col-md-2">
                <label class="form-label x-small fw-bold text-uppercase opacity-75">@Localizer["To"]</label>
                <input type="date" name="to" value="@ViewBag.To" class="form-control border shadow-none rounded-3" />
            </div>
            <div class="col-md-2">
                <button type="submit" class="btn btn-dark w-100 rounded-pill fw-bold h-100 py-2">
                    <i class="fas fa-search me-2"></i> @Localizer["Filter"]
                </button>
            </div>
        </form>
    </div>

    <div class="premium-card border-0 shadow-lg" style="border-radius: var(--radius-md);">
        <div class="table-responsive">
            <table class="table purchase-table align-middle mb-0">
                <thead>
                    <tr>
                        <th class="ps-4">@Localizer["Date"]</th>
                        <th>@Localizer["Product"]</th>
                        <th>@Localizer["Supplier"]</th>
                        <th class="text-center">@Localizer["Quantity"]</th>
                        <th class="text-end">@Localizer["UnitPrice"]</th>
                        <th class="text-end">@Localizer["Total"]</th>
                        <th class="pe-4 text-center">@Localizer["Actions"]</th>
                    </tr>
                </thead>
                <tbody class="border-top-0">
                    @if (!Model.Any())
                    {
                        <tr>
                            <td colspan="7" class="text-center py-5">
                                <div class="opacity-25 mb-3">
                                    <i class="fas fa-receipt fa-4x"></i>
                                </div>
                                <h5 class="text-secondary fw-bold">@Localizer["NoPurchasesFound"]</h5>
                                <p class="text-secondary mb-0">@Localizer["TryDifferentFilters"]</p>
                            </td>
                        </tr>
                    }
                    else
                    {
                        @foreach (var p in Model)
                        {
                            <tr>
                                <td class="ps-4">
                                    <div class="fw-bold">@p.PurchaseDate.ToString("dd MMM yyyy")</div>
                                    <div class="x-small text-secondary fw-medium">@p.PurchaseDate.ToString("hh:mm tt")</div>
                                </td>
                                <td>
                                    <div class="fw-bold text-primary h6 mb-1">@p.ProductName</div>
                                    @if (!string.IsNullOrEmpty(p.Notes))
                                    {
                                        <div class="x-small text-secondary text-truncate" style="max-width: 250px;" title="@p.Notes">
                                            <i class="fas fa-sticky-note me-1 opacity-50"></i> @p.Notes
                                        </div>
                                    }
                                </td>
                                <td>
                                    <span class="badge badge-supplier rounded-pill px-3 py-2 shadow-none">
                                        <i class="fas fa-truck me-2 opacity-50 small"></i>@p.SupplierName
                                    </span>
                                </td>
                                <td class="text-center">
                                    <span class="fw-black fs-5">@p.Quantity</span>
                                </td>
                                <td class="text-end">
                                    <span class="text-secondary small fw-medium">@currency</span> 
                                    <span class="fw-bold">@p.UnitPrice.ToString("N2")</span>
                                </td>
                                <td class="text-end">
                                    <span class="text-success small fw-medium">@currency</span> 
                                    <span class="fw-black h5 mb-0 text-success">@p.TotalPrice.ToString("N2")</span>
                                </td>
                                <td class="pe-4 text-center">
                                    @if (p.ExpenseId.HasValue)
                                    {
                                        <a asp-controller="Expense" asp-action="Index" class="btn btn-sm btn-action-glass rounded-pill px-3 fw-bold" title="@Localizer["ViewExpense"]">
                                            <i class="fas fa-external-link-alt me-2 text-info opacity-75"></i>@Localizer["Expense"]
                                        </a>
                                    }
                                    else
                                    {
                                        <span class="text-secondary opacity-25">--</span>
                                    }
                                </td>
                            </tr>
                        }
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

<style>
    .hover-up { transition: all 0.3s ease; }
    .hover-up:hover { transform: translateY(-3px); box-shadow: 0 10px 20px rgba(0,0,0,0.1) !important; }
    .h-100 { height: 100% !important; }
    .form-select, .form-control { padding: 0.6rem 1rem; }
    [data-theme='dark'] .bg-light { background-color: rgba(255,255,255,0.03) !important; }
    [data-theme='dark'] .table { color: #e2e8f0; }
    [data-theme='dark'] .table td { border-color: rgba(255,255,255,0.05); }
</style>
