@model GymManagmentPL.Models.ErrorViewModel
@{
    ViewData["Title"] = "System Error";
    Layout = "_Layout";
}

<div class="row justify-content-center align-items-center" style="min-height: 70vh;">
    <div class="col-md-6 text-center">
        <div class="mb-4">
            <i class="fas fa-exclamation-circle text-danger display-1 shadow-sm"></i>
        </div>
        <h1 class="fw-bold text-dark">Oops! Something went wrong</h1>
        <p class="text-secondary fs-5 mb-4">
            We encountered an unexpected error while processing your request. 
            Our technical team has been notified.
        </p>
        
        <div class="premium-card p-3 bg-light mb-4 text-start">
            <div class="d-flex align-items-center mb-2">
                <i class="fas fa-bug text-primary me-2"></i>
                <span class="fw-bold">Tracing Identity:</span>
            </div>
            <code>@Model.RequestId</code>
        </div>

        <div class="d-grid gap-2 d-sm-flex justify-content-sm-center">
            <a asp-controller="Home" asp-action="Index" class="btn btn-primary btn-lg px-4 gap-3">
                <i class="fas fa-home me-2"></i> Take me Home
            </a>
            <button class="btn btn-outline-secondary btn-lg px-4 reload-page-btn">
                <i class="fas fa-redo me-2"></i> Try Again
            </button>
        </div>
    </div>
</div>
