@using Microsoft.Extensions.Localization
@using GymManagmentBLL.Service.Interfaces
@inject IStringLocalizer<SharedResource> Localizer
@inject IGymSettingsService GymService
@{
    var culture = System.Globalization.CultureInfo.CurrentUICulture;
    var isRtl = culture.TextInfo.IsRightToLeft;
    var direction = isRtl ? "rtl" : "ltr";
    var lang = culture.TwoLetterISOLanguageName;
    var gymSettings = await GymService.GetSettingsAsync();
}
<!DOCTYPE html>
<html lang="@lang" dir="@direction">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - @gymSettings.GymName</title>
    
    <!-- Fonts -->
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700&family=Cairo:wght@400;600;700&display=swap" rel="stylesheet">
    
    <!-- Bootstrap 5 CSS -->
    @if (System.Globalization.CultureInfo.CurrentUICulture.TextInfo.IsRightToLeft)
    {
        <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.rtl.min.css">
    }
    else
    {
        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    }
    
    <!-- FontAwesome -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
    <!-- Toastr -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/toastr.min.css">
    
    <link rel="stylesheet" href="~/css/ironpulse-dashboard.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    
    @if (System.Globalization.CultureInfo.CurrentUICulture.TextInfo.IsRightToLeft)
    {
        <link rel="stylesheet" href="~/css/rtl.css" asp-append-version="true" />
    }
    @await RenderSectionAsync("Styles", required: false)
    <script>
        // Check theme before page renders to prevent white flash
        (function() {
            const savedTheme = localStorage.getItem('theme') || 'light';
            document.documentElement.setAttribute('data-theme', savedTheme);
        })();
    </script>
</head>
<body>
    
    @if (User.Identity?.IsAuthenticated == true)
    {
        <!-- Sidebar -->
        <div class="sidebar d-none d-lg-flex flex-column shadow-lg">
            <!-- Header -->
            <div class="sidebar-logo text-center">
                <h4 class="fw-bold mb-0" style="color: var(--sidebar-text);"><i class="fas fa-dumbbell me-2 text-primary"></i>@gymSettings.GymName</h4>
                <small style="color: var(--sidebar-text-muted); opacity: 0.8;">@Localizer["ManagementSystem"]</small>
            </div>
            
            <!-- Content Area (Scrollable) -->
            <div class="sidebar-content">
                <div class="px-3 py-4">
                    <div class="nav-section-title">@Localizer["MainMenu"]</div>
                    <nav class="nav flex-column">
                        <a asp-controller="Home" asp-action="Index" class="nav-link @(ViewContext.RouteData.Values["controller"]?.ToString() == "Home" ? "active" : "")">
                            <i class="fas fa-chart-line"></i> @Localizer["Dashboard"]
                        </a>

                        @if (User.IsInRole("SuperAdmin") || User.IsInRole("Admin"))
                        {
                            <div class="nav-section-title">@Localizer["Administration"]</div>
                            <a asp-controller="Member" asp-action="Index" class="nav-link @(ViewContext.RouteData.Values["controller"]?.ToString() == "Member" ? "active" : "")">
                                <i class="fas fa-users"></i> @Localizer["Members"]
                            </a>
                            <a asp-controller="Trainer" asp-action="Index" class="nav-link @(ViewContext.RouteData.Values["controller"]?.ToString() == "Trainer" ? "active" : "")">
                                <i class="fas fa-user-tie"></i> @Localizer["Trainers"]
                            </a>

                            <a asp-controller="Specialty" asp-action="Index" class="nav-link @(ViewContext.RouteData.Values["controller"]?.ToString() == "Specialty" ? "active" : "")">
                                <i class="fas fa-tags"></i> @Localizer["Specialties"]
                            </a>
                            <a asp-controller="MemberShip" asp-action="Index" class="nav-link @(ViewContext.RouteData.Values["controller"]?.ToString() == "MemberShip" ? "active" : "")">
                                <i class="fas fa-id-card"></i> @Localizer["Memberships"]
                            </a>
                            <a asp-controller="Plan" asp-action="Index" class="nav-link @(ViewContext.RouteData.Values["controller"]?.ToString() == "Plan" ? "active" : "")">
                                <i class="fas fa-tags"></i> @Localizer["Plans"]
                            </a>
                            <a asp-controller="Report" asp-action="Financial" class="nav-link @(ViewContext.RouteData.Values["controller"]?.ToString() == "Report" ? "active" : "")">
                                <i class="fas fa-chart-pie"></i> @Localizer["FinancialReports"]
                            </a>
                        }

                        <div class="nav-section-title">@Localizer["Operations"]</div>

                        <a asp-controller="Attendance" asp-action="Scanner" class="nav-link @(ViewContext.RouteData.Values["controller"]?.ToString() == "Attendance" && ViewContext.RouteData.Values["action"]?.ToString() == "Scanner" ? "active" : "")">
                            <i class="fas fa-qrcode"></i> @Localizer["QRScanner"]
                        </a>

                        <a asp-controller="MemberSession" asp-action="Index" class="nav-link @(ViewContext.RouteData.Values["controller"]?.ToString() == "MemberSession" ? "active" : "")">
                            <i class="fas fa-book-reader"></i> @Localizer["Bookings"]
                        </a>

                        <a asp-controller="Session" asp-action="Index" class="nav-link @(ViewContext.RouteData.Values["controller"]?.ToString() == "Session" ? "active" : "")">
                            <i class="fas fa-calendar-alt"></i> @Localizer["Sessions"]
                        </a>

                        <a asp-controller="WalkIn" asp-action="Index" class="nav-link @(ViewContext.RouteData.Values["controller"]?.ToString() == "WalkIn" ? "active" : "")">
                            <i class="fas fa-walking"></i> @Localizer["WalkIn"]
                        </a>

                        <a asp-controller="Store" asp-action="Index" class="nav-link @(ViewContext.RouteData.Values["controller"]?.ToString() == "Store" && ViewContext.RouteData.Values["action"]?.ToString() == "Index" ? "active" : "")">
                            <i class="fas fa-shopping-cart"></i> @Localizer["Store"]
                        </a>

                        <a asp-controller="Attendance" asp-action="History" class="nav-link @(ViewContext.RouteData.Values["controller"]?.ToString() == "Attendance" && ViewContext.RouteData.Values["action"]?.ToString() == "History" ? "active" : "")">
                            <i class="fas fa-clipboard-check"></i> @Localizer["AttendanceHistory"]
                        </a>
                        
                        @if (User.IsInRole("SuperAdmin") || User.IsInRole("Admin"))
                        {
                            <div class="nav-section-title">@Localizer["System"]</div>
                            <a asp-controller="ScheduledTask" asp-action="Index" class="nav-link @(ViewContext.RouteData.Values["controller"]?.ToString() == "ScheduledTask" ? "active" : "")">
                                <i class="fas fa-clock"></i> @Localizer["ScheduledTasks"]
                            </a>
                        }
                        
                        @if (User.IsInRole("SuperAdmin"))
                        {
                            <a asp-controller="Settings" asp-action="Index" class="nav-link @(ViewContext.RouteData.Values["controller"]?.ToString() == "Settings" ? "active" : "")">
                                <i class="fas fa-cog"></i> @Localizer["Settings"]
                            </a>
                        }
                        
                    </nav>
                </div>
            </div>
            
            <!-- Bottom Section (Fixed) -->
            <div class="sidebar-bottom">
                
                
                <a asp-controller="Account" asp-action="Profile" class="user-profile-card d-flex align-items-center p-3 mb-3 rounded-4 border text-decoration-none transition-hover" 
                   style="background: var(--sidebar-hover-bg); border-color: var(--sidebar-border) !important;">
                    <div class="user-avatar-circle rounded-circle d-flex align-items-center justify-content-center shadow-sm" 
                         style="width: 42px; height: 42px; min-width: 42px; background: var(--sidebar-active-bg);">
                        <i class="fas fa-user text-white fs-5"></i>
                    </div>
                    <div class="user-info-text overflow-hidden flex-grow-1 ms-3">
                        <p class="mb-0 small fw-bold text-truncate" style="line-height: 1.2; color: var(--sidebar-text);">@(User.FindFirst("FullName")?.Value ?? User.Identity?.Name)</p>
                        <small class="x-small d-block text-truncate" style="color: var(--sidebar-text-muted);">@(User.Claims.FirstOrDefault(c => c.Type == System.Security.Claims.ClaimTypes.Role)?.Value ?? Localizer["User"])</small>
                    </div>
                    <i class="fas fa-chevron-right small ms-2" style="color: var(--sidebar-text-muted);"></i>
                </a>
                
                <a asp-controller="Account" asp-action="Logout" class="btn btn-logout w-100">
                    <i class="fas fa-sign-out-alt"></i> @Localizer["Logout"]
                </a>
            </div>
        </div>

        <main class="main-content">
            <header class="main-header d-flex justify-content-between align-items-center">
                <div class="d-flex align-items-center flex-grow-1">
                    <nav aria-label="breadcrumb" class="d-none d-md-block me-4">
                        <ol class="breadcrumb mb-0">
                            <li class="breadcrumb-item">
                                <a href="@Url.Action("Index", "Home")">
                                    <i class="fas fa-home small text-primary"></i>
                                </a>
                            </li>
                            <li class="breadcrumb-item active" aria-current="page">@ViewData["Title"]</li>
                        </ol>
                    </nav>

                    <!-- System Status Pulse (Cool Feature) -->
                    <div class="d-none d-lg-flex align-items-center me-4 bg-success bg-opacity-10 px-3 py-1 rounded-pill border border-success border-opacity-25">
                        <span class="status-pulse me-2"></span>
                        <span class="small fw-bold text-success">@Localizer["SystemOnline"]</span>
                    </div>
                    
                    <!-- Search Bar -->
                    <form class="flex-grow-1" method="get" asp-action="Index">
                        <div class="input-group search-group">
                            <span class="input-group-text border-0"><i class="fas fa-search"></i></span>
                            <input type="text" name="searchTerm" class="form-control border-0 bg-transparent" placeholder="@Localizer["GlobalSearch"]" value="@ViewData["SearchTerm"]">
                        </div>
                    </form>
                </div>

                <div class="d-flex align-items-center gap-3 ms-4">
                    <!-- Notifications & Theme -->
                    <div class="d-flex align-items-center gap-3">
                        <div class="dropdown" id="notificationDropdown">
                            <button class="header-action-btn position-relative" type="button" data-bs-toggle="dropdown" aria-expanded="false" onclick="loadNotifications()">
                                <i class="fas fa-bell"></i>
                                <span id="notificationBadge" class="position-absolute badge rounded-circle bg-danger border border-light p-1 d-none" style="top: 8px; right: 8px; width: 10px; height: 10px;">
                                    <span class="visually-hidden">unread messages</span>
                                </span>
                            </button>
                            <ul class="dropdown-menu dropdown-menu-end shadow-lg border-0 p-0" style="width: 320px;">
                                <li class="p-3 border-bottom d-flex justify-content-between align-items-center">
                                    <h6 class="mb-0 fw-bold">@Localizer["Notifications"]</h6>
                                    <small id="btnMarkAllRead" class="text-danger fw-bold cursor-pointer">
                                        <i class="fas fa-trash-alt me-1"></i> @Localizer["MarkAllRead"]
                                    </small>
                                </li>
                                <li class="p-0" style="max-height: 300px; overflow-y: auto;">
                                    <div id="notificationList" data-empty-text="@Localizer["NotificationsEmpty"]">
                                        <!-- Notifications will be loaded here -->
                                        <div class="text-center py-4 text-muted small">
                                            <div class="spinner-border spinner-border-sm text-secondary" role="status">
                                                <span class="visually-hidden">Loading...</span>
                                            </div>
                                        </div>
                                    </div>
                                </li>
                                <li class="p-2 text-center border-top">
                                    <a class="small text-decoration-none fw-bold" asp-controller="Notification" asp-action="Index">@Localizer["ViewAllNotifications"]</a>
                                </li>
                            </ul>
                        </div>
                    </div>
                    <!-- Language Switcher Header -->
                    <div class="dropdown">
                        <button class="header-action-btn" type="button" data-bs-toggle="dropdown" aria-expanded="false" title="@Localizer["SelectLanguage"]">
                            <i class="fas fa-globe"></i>
                        </button>
                        <ul class="dropdown-menu dropdown-menu-end shadow-lg border-0 p-2" style="border-radius: 12px; min-width: 150px;">
                            <li class="dropdown-header small text-uppercase">@Localizer["SelectLanguage"]</li>
                            <li>
                                <form asp-controller="Language" asp-action="SetLanguage" asp-route-culture="en" asp-route-returnUrl="@Context.Request.Path@Context.Request.QueryString" method="post">
                                    <button type="submit" class="dropdown-item rounded d-flex align-items-center mb-1">
                                        <span class="me-2">🇬🇧</span> English
                                    </button>
                                </form>
                            </li>
                            <li>
                                <form asp-controller="Language" asp-action="SetLanguage" asp-route-culture="ar" asp-route-returnUrl="@Context.Request.Path@Context.Request.QueryString" method="post">
                                    <button type="submit" class="dropdown-item rounded d-flex align-items-center">
                                        <span class="me-2">🇪🇬</span> العربية
                                    </button>
                                </form>
                            </li>
                        </ul>
                    </div>

                    <!-- Dark Mode Toggle -->
                    <button id="themeToggle" class="header-action-btn" title="@Localizer["ChangeTheme"]">
                        <i class="fas fa-moon"></i>
                    </button>
                    
                    

                    <!-- User Profile Dropdown -->
                    <div class="dropdown">
                        <button class="btn p-0 border-0 d-flex align-items-center" type="button" data-bs-toggle="dropdown">
                            <div class="bg-primary bg-opacity-10 text-primary rounded-circle d-flex align-items-center justify-content-center fw-bold shadow-sm" style="width: 42px; height: 42px;">
                                @(User.FindFirst("FirstName")?.Value?.Substring(0, 1).ToUpper() ?? User.Identity?.Name?.Substring(0, 1).ToUpper())
                            </div>
                        </button>
                        <ul class="dropdown-menu dropdown-menu-end shadow border-0 mt-2 p-2" style="border-radius: 12px; min-width: 200px;">
                            <li class="px-3 py-2 border-bottom mb-2">
                                <div class="fw-bold">@(User.FindFirst("FullName")?.Value ?? User.Identity?.Name)</div>
                                <small class="text-secondary text-truncate d-block">@(User.Claims.FirstOrDefault(c => c.Type == System.Security.Claims.ClaimTypes.Role)?.Value ?? Localizer["User"])</small>
                            </li>
                            <li><a class="dropdown-item rounded mb-1" asp-controller="Account" asp-action="Profile"><i class="fas fa-user-circle me-2"></i> @Localizer["Profile"]</a></li>
                            <li><a class="dropdown-item rounded mb-1" asp-controller="Account" asp-action="Settings"><i class="fas fa-cog me-2"></i> @Localizer["Settings"]</a></li>
                            <li><hr class="dropdown-divider"></li>
                            <li>
                                <a asp-controller="Account" asp-action="Logout" class="dropdown-item rounded text-danger">
                                    <i class="fas fa-sign-out-alt me-2"></i> @Localizer["Logout"]
                                </a>
                            </li>
                        </ul>
                    </div>

                    <div class="d-lg-none">
                        <button class="header-action-btn" type="button" data-bs-toggle="collapse" data-bs-target="#mobileSidebar">
                            <i class="fas fa-bars"></i>
                        </button>
                    </div>
                </div>
            </header>
            
            @RenderBody()

            <!-- Floating Quick Action Button -->
            <div class="position-fixed bottom-0 end-0 m-4 z-3 d-none d-md-block">
                <div class="dropdown">
                    <button class="btn btn-primary rounded-circle shadow-lg p-0 d-flex align-items-center justify-content-center" 
                            style="width: 60px; height: 60px;" data-bs-toggle="dropdown" aria-expanded="false">
                        <i class="fas fa-plus fs-4"></i>
                    </button>
                    <ul class="dropdown-menu dropdown-menu-end shadow border-0 mb-2 p-2" style="border-radius: 12px; min-width: 200px;">
                        <li class="dropdown-header text-uppercase small fw-bold">@Localizer["QuickActions"]</li>
                        <li><a class="dropdown-item rounded py-2" asp-controller="Member" asp-action="Create"><i class="fas fa-user-plus me-2 text-primary"></i> @Localizer["AddMember"]</a></li>
                        <li><a class="dropdown-item rounded py-2" asp-controller="Trainer" asp-action="Create"><i class="fas fa-user-shield me-2 text-success"></i> @Localizer["AddTrainer"]</a></li>
                        <li><a class="dropdown-item rounded py-2" asp-controller="MemberSession" asp-action="Index"><i class="fas fa-calendar-plus me-2 text-warning"></i> @Localizer["BookSession"]</a></li>
                        <li><a class="dropdown-item rounded py-2" asp-controller="WalkIn" asp-action="Create"><i class="fas fa-walking me-2 text-info"></i> @Localizer["WalkInBooking"]</a></li>
                        <li><a class="dropdown-item rounded py-2" asp-controller="Attendance" asp-action="Scanner"><i class="fas fa-qrcode me-2 text-danger"></i> @Localizer["EntranceCheckIn"]</a></li>
                        <li><a class="dropdown-item rounded py-2" asp-controller="Expense" asp-action="Create"><i class="fas fa-receipt me-2 text-orange"></i> @Localizer["AddExpense"]</a></li>
                        <li><hr class="dropdown-divider"></li>
                        <li class="dropdown-header text-uppercase small fw-bold">@Localizer["Store"]</li>
                        <li><a class="dropdown-item rounded py-2" asp-controller="Store" asp-action="CreateSale"><i class="fas fa-cart-plus me-2 text-success"></i> @Localizer["NewSale"]</a></li>
                        <li><a class="dropdown-item rounded py-2" asp-controller="Store" asp-action="SalesHistory"><i class="fas fa-file-invoice-dollar me-2 text-info"></i> @Localizer["SalesHistory"]</a></li>
                        <li><a class="dropdown-item rounded py-2" asp-controller="Store" asp-action="CreateProduct"><i class="fas fa-box-open me-2 text-primary"></i> @Localizer["AddProduct"]</a></li>
                        <li><a class="dropdown-item rounded py-2" asp-controller="Store" asp-action="LowStockProducts"><i class="fas fa-exclamation-triangle me-2 text-warning"></i> @Localizer["LowStockProducts"]</a></li>
                        <li><hr class="dropdown-divider"></li>
                        <li><a class="dropdown-item rounded py-2" asp-controller="Home" asp-action="Index"><i class="fas fa-tachometer-alt me-2 text-info"></i> @Localizer["Dashboard"]</a></li>
                    </ul>
                </div>
            </div>
        </main>
    }
    else
    {
        <div class="container-fluid p-0">
            @RenderBody()
        </div>
    }

    <!-- Scripts -->
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    
    <div id="global-notifications" 
         data-success="@(TempData["SuccessMessage"] ?? ViewBag.SuccessMessage)"
         data-error="@(TempData["ErrorMessage"] ?? ViewBag.ErrorMessage)"
         data-warning="@(TempData["WarningMessage"] ?? ViewBag.WarningMessage)"
         data-fail-title="@Localizer["OperationFailed"]"
         data-confirm-text="@Localizer["Confirm"]"
         data-cancel-text="@Localizer["Cancel"]"
         data-success-title="@Localizer["Success"]"
         data-yes-proceed="@Localizer["YesProceed"]"
         data-no-results="@Localizer["NoMatchingRecords"]"
         data-failed-notification="@Localizer["FailedDeleteNotification"]"
         data-items="@Localizer["Items"]"
         data-delete="@Localizer["Delete"]">
    </div>

    @Html.AntiForgeryToken()

    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <partial name="_AlertBoxScript" />
    <script src="~/js/gym.js" asp-append-version="true"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    <script>
        // Theme Toggle Script
        (function() {
            const themeToggle = document.getElementById('themeToggle');
            const html = document.documentElement;
            if (!themeToggle) return;
            const icon = themeToggle.querySelector('i');
            
            // Initial icon update
            const currentTheme = html.getAttribute('data-theme');
            updateIcon(currentTheme);

            themeToggle.addEventListener('click', () => {
                const currentTheme = html.getAttribute('data-theme');
                const newTheme = currentTheme === 'light' ? 'dark' : 'light';
                
                html.setAttribute('data-theme', newTheme);
                localStorage.setItem('theme', newTheme);
                updateIcon(newTheme);
            });

            function updateIcon(theme) {
                if (theme === 'dark') {
                    icon.classList.replace('fa-moon', 'fa-sun');
                } else {
                    icon.classList.replace('fa-sun', 'fa-moon');
                }
            }
        })();
    </script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/microsoft-signalr/7.0.5/signalr.min.js"></script>
    <script>
        // SignalR Real-time Inventory Notifications
        const inventoryConnection = new signalR.HubConnectionBuilder()
            .withUrl("/inventoryHub")
            .withAutomaticReconnect()
            .build();

        inventoryConnection.on("ReceiveInventoryAlert", function (data) {
            console.log("Inventory Alert:", data);
            
            // Show SweetAlert Toast
            const Toast = Swal.mixin({
                toast: true,
                position: 'top-end',
                showConfirmButton: false,
                timer: 5000,
                timerProgressBar: true,
                didOpen: (toast) => {
                    toast.addEventListener('mouseenter', Swal.stopTimer)
                    toast.addEventListener('mouseleave', Swal.resumeTimer)
                }
            });

            Toast.fire({
                icon: 'warning',
                title: `@Html.Raw(Localizer["LowStock"])`,
                html: `<strong>${data.productName}</strong>: ${data.newStock} items left.`
            });

            // If we are on the Store Index or Dashboard, we might want to refresh elements
            if (window.location.pathname.includes('/Store')) {
                // Future improvement: Dynamically update stock badge on page
            }
        });

        inventoryConnection.start().catch(err => console.error(err.toString()));
    </script>
    @await RenderSectionAsync("Modals", required: false)
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
