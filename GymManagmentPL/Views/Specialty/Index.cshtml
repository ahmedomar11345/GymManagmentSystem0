@model IEnumerable<GymManagmentDAL.Entities.TrainerSpecialty>
@inject IStringLocalizer<SharedResource> Localizer
@{
    ViewData["Title"] = Localizer["ManageSpecialties"];
}

<div class="container-fluid py-4">
    <!-- Header -->
    <div class="row mb-4">
        <div class="col-12">
            <div class="glass-header p-4 rounded-4 shadow-sm d-flex flex-wrap justify-content-between align-items-center gap-3">
                <div class="d-flex align-items-center">
                    <div class="icon-shape bg-primary text-white rounded-3 me-3 shadow-glow">
                        <i class="fas fa-tags fa-lg"></i>
                    </div>
                    <div>
                        <h4 class="fw-bold mb-0">@Localizer["TrainerSpecialties"]</h4>
                        <p class="text-muted small mb-0">@Localizer["ManageSpecialtiesDesc"]</p>
                    </div>
                </div>
                <div class="d-flex gap-2">
                    <div class="search-box">
                        <i class="fas fa-search search-icon"></i>
                        <input type="text" id="specialtySearch" class="form-control rounded-pill ps-5" placeholder="@Localizer["SearchSpecialties"]">
                    </div>
                    <button class="btn btn-primary rounded-pill px-4 shadow-sm btn-hover-grow" data-bs-toggle="modal" data-bs-target="#createModal">
                        <i class="fas fa-plus me-2"></i> @Localizer["AddNewSpecialty"]
                    </button>
                </div>
            </div>
        </div>
    </div>

    <!-- Stats Summary -->
    <div class="row mb-4 g-3">
        <div class="col-md-3">
            <div class="stats-card p-3 rounded-4 shadow-sm border-0 bg-white">
                <div class="d-flex align-items-center">
                    <div class="rounded-3 bg-soft-primary p-3 me-3">
                        <i class="fas fa-list-ul text-primary"></i>
                    </div>
                    <div>
                        <h3 class="fw-bold mb-0">@Model.Count()</h3>
                        <p class="text-muted small mb-0">Total Categories</p>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="stats-card p-3 rounded-4 shadow-sm border-0 bg-white">
                <div class="d-flex align-items-center">
                    <div class="rounded-3 bg-soft-success p-3 me-3">
                        <i class="fas fa-user-tie text-success"></i>
                    </div>
                    <div>
                        <h3 class="fw-bold mb-0">@Model.Sum(s => s.Trainers?.Count ?? 0)</h3>
                        <p class="text-muted small mb-0">Total Active Trainers</p>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Specialties Grid/Table -->
    <div class="row">
        <div class="col-12">
            <div class="card border-0 shadow-sm rounded-4 overflow-hidden">
                <div class="table-responsive">
                    <table class="table table-hover align-middle mb-0 custom-table" id="specialtiesTable">
                        <thead class="bg-light border-bottom">
                            <tr>
                                <th class="ps-4 py-3 text-uppercase small fw-bold">@Localizer["Name"]</th>
                                <th class="py-3 text-uppercase small fw-bold">@Localizer["Description"]</th>
                                <th class="py-3 text-uppercase small fw-bold text-center">@Localizer["TrainersCount"]</th>
                                <th class="py-3 text-uppercase small fw-bold">@Localizer["CreatedAt"]</th>
                                <th class="pe-4 py-3 text-uppercase small fw-bold text-end">@Localizer["Actions"]</th>
                            </tr>
                        </thead>
                        <tbody>
                            @if (!Model.Any())
                            {
                                <tr>
                                    <td colspan="5" class="text-center py-5">
                                        <div class="opacity-25 mb-3">
                                            <i class="fas fa-folder-open fa-4x"></i>
                                        </div>
                                        <h5 class="text-muted">@Localizer["NoSpecialtiesFound"]</h5>
                                    </td>
                                </tr>
                            }
                            @foreach (var item in Model)
                            {
                                <tr class="specialty-row animate__animated animate__fadeIn">
                                    <td class="ps-4">
                                        <div class="d-flex align-items-center">
                                            <div class="specialty-indicator me-2 bg-primary"></div>
                                            <span class="fw-bold text-dark">@item.Name</span>
                                        </div>
                                    </td>
                                    <td class="text-muted small">@(string.IsNullOrEmpty(item.Description) ? "---" : item.Description)</td>
                                    <td class="text-center">
                                        <div class="badge bg-soft-primary text-primary rounded-pill px-3 py-2 fw-semibold">
                                            <i class="fas fa-users-cog me-1"></i> @(item.Trainers?.Count ?? 0)
                                        </div>
                                    </td>
                                    <td class="small text-muted">
                                        <i class="far fa-calendar-alt me-1 opacity-50"></i> @item.CreatedAt.ToString("g")
                                    </td>
                                    <td class="pe-4 text-end">
                                        <div class="d-flex justify-content-end gap-2">
                                            <button class="btn btn-sm btn-icon border shadow-sm rounded-pill btn-edit" 
                                                    data-id="@item.Id" 
                                                    data-name="@item.Name" 
                                                    data-desc="@item.Description"
                                                    data-bs-toggle="modal" 
                                                    data-bs-target="#editModal">
                                                <i class="fas fa-edit text-info"></i>
                                            </button>
                                            <form asp-action="Delete" asp-route-id="@item.Id" method="post" class="d-inline delete-form">
                                                @Html.AntiForgeryToken()
                                                <button type="submit" class="btn btn-sm btn-icon border shadow-sm rounded-pill btn-delete">
                                                    <i class="fas fa-trash-alt text-danger"></i>
                                                </button>
                                            </form>
                                        </div>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Create Modal -->
<div class="modal fade" id="createModal" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content border-0 shadow-lg rounded-4">
            <div class="modal-header bg-light border-0 py-3">
                <div class="d-flex align-items-center">
                    <div class="bg-primary bg-opacity-10 text-primary p-2 rounded-3 me-3">
                        <i class="fas fa-plus"></i>
                    </div>
                    <h5 class="fw-bold mb-0">@Localizer["AddNewSpecialty"]</h5>
                </div>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <form asp-action="Create" method="post">
                <div class="modal-body py-4">
                    <div class="mb-4">
                        <label class="form-label small fw-bold text-uppercase text-muted">@Localizer["SpecialtyName"]</label>
                        <div class="input-group">
                            <span class="input-group-text bg-white border-end-0 rounded-start-3"><i class="fas fa-tag text-muted"></i></span>
                            <input type="text" name="name" class="form-control border-start-0 rounded-end-3 py-2" placeholder="e.g. CrossFit, Yoga..." required />
                        </div>
                    </div>
                    <div class="mb-0">
                        <label class="form-label small fw-bold text-uppercase text-muted">@Localizer["Description"]</label>
                        <div class="input-group">
                            <span class="input-group-text bg-white border-end-0 rounded-start-3"><i class="fas fa-align-left text-muted"></i></span>
                            <textarea name="Description" class="form-control border-start-0 rounded-end-3 py-2" rows="3" placeholder="Optional details..."></textarea>
                        </div>
                    </div>
                </div>
                <div class="modal-footer border-0 pt-0">
                    <button type="button" class="btn btn-light rounded-pill px-4" data-bs-dismiss="modal">@Localizer["Cancel"]</button>
                    <button type="submit" class="btn btn-primary rounded-pill px-4 shadow-sm btn-hover-grow">
                        <i class="fas fa-save me-1"></i> @Localizer["Save"]
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>

<!-- Edit Modal -->
<div class="modal fade" id="editModal" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content border-0 shadow-lg rounded-4">
            <div class="modal-header bg-light border-0 py-3">
                <div class="d-flex align-items-center">
                    <div class="bg-info bg-opacity-10 text-info p-2 rounded-3 me-3">
                        <i class="fas fa-edit"></i>
                    </div>
                    <h5 class="fw-bold mb-0">@Localizer["EditSpecialty"]</h5>
                </div>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <form asp-action="Edit" method="post">
                <input type="hidden" name="Id" id="editId" />
                <div class="modal-body py-4">
                    <div class="mb-4">
                        <label class="form-label small fw-bold text-uppercase text-muted">@Localizer["SpecialtyName"]</label>
                        <div class="input-group">
                            <span class="input-group-text bg-white border-end-0 rounded-start-3"><i class="fas fa-tag text-muted"></i></span>
                            <input type="text" name="name" id="editName" class="form-control border-start-0 rounded-end-3 py-2" placeholder="e.g. CrossFit, Yoga..." required />
                        </div>
                    </div>
                    <div class="mb-0">
                        <label class="form-label small fw-bold text-uppercase text-muted">@Localizer["Description"]</label>
                        <div class="input-group">
                            <span class="input-group-text bg-white border-end-0 rounded-start-3"><i class="fas fa-align-left text-muted"></i></span>
                            <textarea name="Description" id="editDesc" class="form-control border-start-0 rounded-end-3 py-2" rows="3" placeholder="Additional details about this specialty..."></textarea>
                        </div>
                    </div>
                </div>
                <div class="modal-footer border-0 pt-0">
                    <button type="button" class="btn btn-light rounded-pill px-4" data-bs-dismiss="modal">@Localizer["Cancel"]</button>
                    <button type="submit" class="btn btn-primary rounded-pill px-4 shadow-sm btn-hover-grow">
                        <i class="fas fa-check-circle me-1"></i> @Localizer["Update"]
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>

<style>
    .glass-header {
        background: rgba(255, 255, 255, 0.7);
        backdrop-filter: blur(10px);
        border: 1px solid rgba(255, 255, 255, 0.4);
    }
    
    [data-theme="dark"] .glass-header {
        background: rgba(30, 41, 59, 0.7);
        border-color: rgba(255, 255, 255, 0.1);
    }
    .icon-shape {
        width: 48px;
        height: 48px;
        display: flex;
        align-items: center;
        justify-content: center;
    }
    .shadow-glow { box-shadow: 0 0 15px rgba(13, 110, 253, 0.3); }
    
    .bg-soft-primary { background: rgba(13, 110, 253, 0.08); }
    .bg-soft-success { background: rgba(25, 135, 84, 0.08); }
    
    .search-box { position: relative; width: 300px; }
    .search-icon {
        position: absolute;
        left: 20px;
        top: 50%;
        transform: translateY(-50%);
        color: #adb5bd;
        z-index: 5;
    }
    
    .search-box input {
        background: rgba(255, 255, 255, 0.5);
        border: 1px solid rgba(0, 0, 0, 0.05);
    }
    
    [data-theme="dark"] .search-box input {
        background: rgba(15, 23, 42, 0.6);
        border-color: rgba(255, 255, 255, 0.1);
        color: white;
    }
    
    [data-theme="dark"] .search-box input::placeholder {
        color: rgba(255, 255, 255, 0.4);
    }
    
    .custom-table thead th {
        background: #f8fafc;
        color: #64748b;
        font-size: 0.75rem;
        letter-spacing: 0.05em;
    }
    .specialty-row { 
        transition: all 0.2s ease;
        border-right: 3px solid transparent;
    }
    .specialty-row:hover {
        background-color: #f8fafc !important;
        border-right-color: #0d6efd;
    }
    .specialty-indicator {
        width: 6px;
        height: 6px;
        border-radius: 50%;
    }
    
    .btn-icon {
        width: 32px;
        height: 32px;
        padding: 0;
        display: flex;
        align-items: center;
        justify-content: center;
        background: white;
    }
    .btn-icon:hover { background: #f8fafc; transform: translateY(-2px); }
    
    .btn-hover-grow { transition: transform 0.2s ease; }
    .btn-hover-grow:hover { transform: scale(1.05); }

    /* CRITICAL FIX: Disable parent animation stacking context and fix modal z-index */
    .animate-fade-in {
        transform: none !important;
        animation: none !important;
    }
    .modal {
        z-index: 2000 !important;
    }
    .modal-backdrop {
        z-index: 1060 !important;
    }

    [dir="rtl"] .search-icon { left: auto; right: 20px; }
    [dir="rtl"] .ps-5 { padding-left: 0 !important; padding-right: 3rem !important; }
    [dir="rtl"] .specialty-row:hover { border-right-color: transparent; border-left-color: #0d6efd; }
    [dir="rtl"] .me-3 { margin-right: 0 !important; margin-left: 1rem !important; }
    [dir="rtl"] .me-2 { margin-right: 0 !important; margin-left: 0.5rem !important; }
</style>

@section Scripts {
    <script>
        $(document).ready(function() {
            // Edit Modal Data Mapping
            $('.btn-edit').on('click', function() {
                const id = $(this).data('id');
                const name = $(this).data('name');
                const desc = $(this).data('desc');
                
                $('#editId').val(id);
                $('#editName').val(name);
                $('#editDesc').val(desc);
            });

            // Delete Confirmation
            $('.delete-form').on('submit', function(e) {
                if (!confirm('@Localizer["DeleteSpecialtyConfirm"].Value')) {
                    e.preventDefault();
                }
            });

            // Quick Search Filter
            $("#specialtySearch").on("keyup", function() {
                var value = $(this).val().toLowerCase();
                $("#specialtiesTable tbody tr").filter(function() {
                    $(this).toggle($(this).text().toLowerCase().indexOf(value) > -1)
                });
            });
        });
    </script>
}
