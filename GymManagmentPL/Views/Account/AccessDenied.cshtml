@inject IStringLocalizer<SharedResource> Localizer
@{
    Layout = null;
    var culture = System.Globalization.CultureInfo.CurrentUICulture;
    var isRtl = culture.TextInfo.IsRightToLeft;
    var direction = isRtl ? "rtl" : "ltr";
    var lang = culture.TwoLetterISOLanguageName;
}
<!DOCTYPE html>
<html lang="@lang" dir="@direction">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@Localizer["AccessDenied"] - @Localizer["AppName"]</title>
    <link rel="stylesheet" href="~/css/access-denied.css" asp-append-version="true" />
</head>
<body>
    <!-- Main Content -->
    <div class="container">
        <div class="access-denied-wrapper">
            <!-- Left Content -->
            <div class="content">
                <div class="error-icon">🚫</div>
                <h1>
                    @Localizer["Access"] <span class="error-highlight">@Localizer["DeniedText"]</span>
                </h1>
                <p class="error-message">
                    @Localizer["AccessDeniedDesc"]
                </p>
                <div class="error-code">
                    @Localizer["ErrorCode"]: 403 - @Localizer["ForbiddenAccess"]
                </div>
                <p class="error-message">
                    @Localizer["AccessDeniedHelp"]
                </p>
                <div class="button-group">
                    <a asp-action="Index" asp-controller="Home" class="btn btn-primary">@Localizer["ReturnToHome"]</a>
                </div>
            </div>

            <!-- Right Image -->
            <div class="image-section">
                <div class="lock-icon">🔒</div>
            </div>
        </div>
    </div>
</body>
</html>
