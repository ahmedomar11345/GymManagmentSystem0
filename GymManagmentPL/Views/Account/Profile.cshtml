@using GymManagmentDAL.Entities
@using Microsoft.Extensions.Localization
@inject IStringLocalizer<SharedResource> Localizer
@model ApplicationUser
@{
    ViewData["Title"] = Localizer["Profile"];
}

<div class="row justify-content-center animate-fade-in">
    <div class="col-lg-10">
        <!-- Profile Header Card -->
        <div class="premium-card overflow-hidden mb-4 border-0 shadow-sm">
            <div class="bg-primary p-5 text-white position-relative overflow-hidden">
                <div class="position-relative z-1 d-flex align-items-center">
                    <div class="bg-white bg-opacity-25 rounded-circle d-flex align-items-center justify-content-center fw-bold text-white shadow-lg border border-4 border-white border-opacity-25" style="width: 100px; height: 100px; font-size: 2.5rem;">
                        @Model.FirstName.Substring(0, 1).ToUpper()@Model.LastName.Substring(0, 1).ToUpper()
                    </div>
                    <div class="ms-4">
                        <h1 class="fw-bold mb-1">@Model.FirstName @Model.LastName</h1>
                        <p class="mb-0 opacity-75 lead">@(User.Claims.FirstOrDefault(c => c.Type == System.Security.Claims.ClaimTypes.Role)?.Value ?? Localizer["Administrator"])</p>
                    </div>
                </div>
                <!-- Abstract Design Elements -->
                <div class="position-absolute end-0 top-0 mt-n5 me-n5 opacity-10">
                    <i class="fas fa-dumbbell fa-10x transform-rotate-45"></i>
                </div>
            </div>

            <div class="p-4 p-md-5">
                <div class="row g-4">
                    <div class="col-md-6">
                        <h5 class="fw-bold mb-4 border-bottom pb-2">
                            <i class="fas fa-id-card text-primary me-2"></i>@Localizer["PersonalInformation"]
                        </h5>
                        <div class="mb-4">
                            <label class="small text-uppercase fw-bold text-secondary d-block">@Localizer["FirstName"]</label>
                            <div class="h6 mb-0 py-2">@Model.FirstName</div>
                        </div>
                        <div class="mb-4">
                            <label class="small text-uppercase fw-bold text-secondary d-block">@Localizer["LastName"]</label>
                            <div class="h6 mb-0 py-2">@Model.LastName</div>
                        </div>
                        <div class="mb-4">
                            <label class="small text-uppercase fw-bold text-secondary d-block text-truncate">@Localizer["AccountType"]</label>
                            <div class="py-1">
                                <span class="badge bg-primary bg-opacity-10 text-primary px-3 py-2 rounded-pill">
                                    <i class="fas fa-shield-alt me-1"></i> @(User.Claims.FirstOrDefault(c => c.Type == System.Security.Claims.ClaimTypes.Role)?.Value ?? Localizer["Administrator"])
                                </span>
                            </div>
                        </div>
                    </div>

                    <div class="col-md-6">
                        <h5 class="fw-bold mb-4 border-bottom pb-2">
                            <i class="fas fa-envelope text-primary me-2"></i>@Localizer["ContactDetails"]
                        </h5>
                        <div class="mb-4">
                            <label class="small text-uppercase fw-bold text-secondary d-block">@Localizer["EmailAddress"]</label>
                            <div class="h6 mb-0 py-2">
                                <i class="fas fa-at me-2 text-secondary"></i>@Model.Email
                            </div>
                        </div>
                        <div class="mb-4">
                            <label class="small text-uppercase fw-bold text-secondary d-block text-truncate">@Localizer["Phone"]</label>
                            <div class="h6 mb-0 py-2">
                                <i class="fas fa-phone me-2 text-secondary"></i>@(Model.PhoneNumber ?? Localizer["NotSpecified"])
                            </div>
                        </div>
                    </div>
                </div>

                <div class="d-flex gap-3 justify-content-end mt-5 pt-4 border-top">
                    <a asp-action="Settings" class="btn btn-outline-secondary px-4 py-2 rounded-pill fw-bold">
                        <i class="fas fa-cog me-2"></i>@Localizer["UpdateSettings"]
                    </a>
                    <button class="btn btn-primary px-4 py-2 rounded-pill fw-bold shadow-sm" data-bs-toggle="modal" data-bs-target="#editProfileModal">
                        <i class="fas fa-edit me-2"></i>@Localizer["EditProfile"]
                    </button>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Edit Profile Modal -->
<div class="modal fade" id="editProfileModal" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content border-0 shadow-lg" style="border-radius: 20px;">
            <div class="modal-header border-0 pb-0">
                <h5 class="modal-title fw-bold">@Localizer["UpdateProfile"]</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <form asp-action="UpdateProfile" method="post">
                <div class="modal-body p-4">
                    <div class="mb-3">
                        <label class="form-label small fw-bold text-main text-uppercase opacity-75">@Localizer["FirstName"]</label>
                        <input name="FirstName" value="@Model.FirstName" class="form-control rounded-pill px-3" required />
                    </div>
                    <div class="mb-3">
                        <label class="form-label small fw-bold text-main text-uppercase opacity-75">@Localizer["LastName"]</label>
                        <input name="LastName" value="@Model.LastName" class="form-control rounded-pill px-3" required />
                    </div>
                    <div class="mb-3">
                        <label class="form-label small fw-bold text-main text-uppercase opacity-75">@Localizer["Phone"]</label>
                        <input name="PhoneNumber" value="@Model.PhoneNumber" class="form-control rounded-pill px-3" />
                    </div>
                </div>
                <div class="modal-footer border-0 pt-0">
                    <button type="button" class="btn btn-outline-secondary rounded-pill px-4" data-bs-dismiss="modal">@Localizer["Cancel"]</button>
                    <button type="submit" class="btn btn-primary rounded-pill px-4 shadow-sm">@Localizer["SaveChanges"]</button>
                </div>
            </form>
        </div>
    </div>
</div>
@section Scripts {
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            // Move modal to body to avoid backdrop/interaction issues
            const modal = document.getElementById('editProfileModal');
            if (modal) {
                document.body.appendChild(modal);
            }
        });
    </script>
}
