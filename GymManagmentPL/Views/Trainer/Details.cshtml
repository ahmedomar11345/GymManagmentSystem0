@model TrainerViewModel
@inject IStringLocalizer<SharedResource> Localizer

@{
    ViewData["Title"] = Localizer["TrainerProfile"];
}

<div class="row mb-4 align-items-center">
    <div class="col-md-6">
        <nav aria-label="breadcrumb">
            <ol class="breadcrumb mb-2">
                <li class="breadcrumb-item"><a asp-action="Index" class="text-decoration-none">@Localizer["Trainers"]</a></li>
                <li class="breadcrumb-item active">@Model.Name</li>
            </ol>
        </nav>
        <h2 class="fw-bold mb-0">
            <i class="fas fa-user-tie text-primary me-2"></i>@Localizer["TrainerProfile"]
        </h2>
    </div>
    <div class="col-md-6 text-md-end">
        <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-primary me-2">
            <i class="fas fa-edit me-2"></i>@Localizer["EditProfile"]
        </a>
        <a asp-action="Index" class="btn btn-outline-secondary">
            <i class="fas fa-arrow-left me-2"></i>@Localizer["BackToList"]
        </a>
    </div>
</div>

<div class="row g-4 justify-content-center">
    <!-- Header Card -->
    <div class="col-lg-10">
        <div class="premium-card overflow-hidden">
            <div class="bg-primary bg-opacity-10 p-5 text-center position-relative">
                <div class="bg-primary text-white rounded-circle d-flex align-items-center justify-content-center mx-auto mb-4 shadow" 
                     style="width: 120px; height: 120px; font-size: 3rem;">
                    <span class="fw-bold">@Model.Name.Substring(0, 1).ToUpper()</span>
                </div>
                <h2 class="fw-bold h1 mb-2">@Model.Name</h2>
                <div class="d-flex justify-content-center gap-2">
                    <span class="badge bg-primary px-3 py-2 rounded-pill">
                        <i class="fas fa-dumbbell me-1"></i> @Model.Specialties @Localizer["Specialist"]
                    </span>
                    <span class="badge bg-success bg-opacity-10 text-success px-3 py-2 rounded-pill border border-success border-opacity-25">
                        <i class="fas fa-check-circle me-1"></i> @Localizer["StaffMember"]
                    </span>
                </div>
            </div>
            
            <div class="p-4 p-md-5">
                <div class="row g-5">
                    <!-- Contact Column -->
                    <div class="col-md-6 pe-md-5 border-end border-light">
                        <h5 class="fw-bold mb-4 border-bottom pb-2">
                            <i class="fas fa-address-card text-primary me-2"></i>@Localizer["ContactInformation"]
                        </h5>
                        
                        <div class="mb-4 d-flex align-items-start">
                            <div class="icon-shape bg-light text-primary me-3 small" style="width: 40px; height: 40px; min-width: 40px;">
                                <i class="fas fa-envelope"></i>
                            </div>
                            <div>
                                <div class="small text-secondary text-uppercase fw-bold mb-1">@Localizer["EmailAddress"]</div>
                                <div class="h6 fw-bold mb-0">@Model.Email</div>
                                <a href="mailto:@Model.Email" class="small text-primary text-decoration-none">@Localizer["SendMessage"] <i class="fas fa-external-link-alt ms-1" style="font-size: 0.7rem;"></i></a>
                            </div>
                        </div>

                        <div class="mb-4 d-flex align-items-start">
                            <div class="icon-shape bg-light text-primary me-3 small" style="width: 40px; height: 40px; min-width: 40px;">
                                <i class="fas fa-phone"></i>
                            </div>
                            <div>
                                <div class="small text-secondary text-uppercase fw-bold mb-1">@Localizer["Phone"]</div>
                                <div class="h6 fw-bold mb-0">@Model.Phone</div>
                            </div>
                        </div>

                        <div class="mb-0 d-flex align-items-start">
                            <div class="icon-shape bg-light text-primary me-3 small" style="width: 40px; height: 40px; min-width: 40px;">
                                <i class="fas fa-map-marker-alt"></i>
                            </div>
                            <div>
                                <div class="small text-secondary text-uppercase fw-bold mb-1">@Localizer["OfficeAddress"]</div>
                                <div class="h6 fw-bold mb-0">@Model.Address</div>
                            </div>
                        </div>
                    </div>

                    <!-- Personal Column -->
                    <div class="col-md-6 ps-md-5">
                        <h5 class="fw-bold mb-4 border-bottom pb-2">
                            <i class="fas fa-info-circle text-primary me-2"></i>@Localizer["StaffDetails"]
                        </h5>

                        <div class="mb-4 d-flex align-items-start">
                            <div class="icon-shape bg-light text-primary me-3 small" style="width: 40px; height: 40px; min-width: 40px;">
                                <i class="fas fa-birthday-cake"></i>
                            </div>
                            <div>
                                <div class="small text-secondary text-uppercase fw-bold mb-1">@Localizer["DateOfBirth"]</div>
                                <div class="h6 fw-bold mb-0">@Model.DateOfBirth</div>
                            </div>
                        </div>

                        <div class="mb-4 d-flex align-items-start">
                            <div class="icon-shape bg-light text-primary me-3 small" style="width: 40px; height: 40px; min-width: 40px;">
                                <i class="fas fa-calendar-alt"></i>
                            </div>
                            <div>
                                <div class="small text-secondary text-uppercase fw-bold mb-1">@Localizer["RegisteredOn"]</div>
                                <div class="h6 fw-bold mb-0">@(DateTime.Now.ToString("MMM yyyy")) <small class="text-secondary fw-normal">(@Localizer["Optional"])</small></div>
                            </div>
                        </div>

                        <div class="alert alert-warning border-0 bg-warning bg-opacity-10 text-dark small mb-0">
                            <i class="fas fa-exclamation-triangle me-2 text-warning"></i>
                            @Localizer["TrainerAccessNote"]
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="~/js/trainer.js" asp-append-version="true"></script>
}
