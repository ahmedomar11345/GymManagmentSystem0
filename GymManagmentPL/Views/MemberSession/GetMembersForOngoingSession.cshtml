@model SessionMembersViewModel

@if (TempData["SuccessMessage"] is not null)
{
    <div id="Alert" class="alert alert-success alert-dismissible fade show">
        <i class="bi bi-check-circle-fill me-2"></i>
        @TempData["SuccessMessage"]
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    </div>
}

@if (TempData["ErrorMessage"] is not null)
{
    <div id="Alert" class="alert alert-danger alert-dismissible fade show">
        <i class="bi bi-exclamation-triangle-fill me-2"></i>
        @TempData["ErrorMessage"]
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    </div>
}

<header class="bg-success text-white rounded-3 p-4 shadow-sm mt-5 mb-4">
    <div class="d-flex justify-content-between align-items-center">
        <div>
            <h2 class="mb-1 fw-semibold">@Model.SessionName - Attendance</h2>
            <p class="mb-0 text-light opacity-75">Mark Members Attendance</p>
        </div>
    </div>
</header>

<div class="card shadow-sm">
    <div class="card-body">
        @if (Model.Bookings.Any())
        {
            <table class="table table-striped table-hover align-middle text-center">
                <thead>
                    <tr>
                        <th>Member</th>
                        <th>Attendance</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var booking in Model.Bookings)
                    {
                        <tr>
                            <td>@booking.MemberName</td>
                            <td>
                                <div class="d-flex justify-content-center gap-1">
                                    @if (booking.IsAttended)
                                    {
                                        <span class="text-success fw-bold">
                                            <i class="bi bi-check-circle me-1"></i> Attended
                                        </span>
                                    }
                                    else
                                    {
                                        <form asp-action="MarkAttendance" method="post" class="d-inline">
                                            <input type="hidden" name="memberId" value="@booking.MemberId" />
                                            <input type="hidden" name="sessionId" value="@booking.SessionId" />
                                            <button type="submit" class="btn btn-outline-success btn-sm">
                                                <i class="bi bi-check-circle me-1"></i> Mark as Attended
                                            </button>
                                        </form>
                                    }
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        }
        else
        {
            <div class="text-center py-5">
                <i class="bi bi-person-workspace display-1 text-muted"></i>
                <h4 class="mt-3 text-muted">No Members Available</h4>
            </div>
        }
    </div>
    <div class="card-footer">
        <a asp-action="Index" class="btn btn-success">Back to List</a>
    </div>
</div>

@section Scripts {
    <partial name="_AlertBoxScript" />
}
