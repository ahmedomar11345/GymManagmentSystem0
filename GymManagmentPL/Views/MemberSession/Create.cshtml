@inject IStringLocalizer<SharedResource> Localizer
@model CreateBookingViewModel

@{
    ViewData["Title"] = Localizer["EnrollMember"];
}

<div class="row mb-4 align-items-center mt-4">
    <div class="col-md-6">
        <nav aria-label="breadcrumb">
            <ol class="breadcrumb mb-2">
                <li class="breadcrumb-item"><a asp-action="Index" class="text-decoration-none">@Localizer["Bookings"]</a></li>
                <li class="breadcrumb-item active">@Localizer["Enrollment"]</li>
            </ol>
        </nav>
        <h2 class="fw-bold mb-0">
            <i class="fas fa-user-plus text-primary me-2"></i>@Localizer["EnrollMember"]
        </h2>
    </div>
    <div class="col-md-6 text-md-end">
        <a asp-action="GetMembersForUpcomingSession" asp-route-id="@Model.SessionId" class="btn btn-outline-secondary rounded-pill px-4">
            <i class="fas fa-times me-2"></i> @Localizer["Cancel"]
        </a>
    </div>
</div>

<div class="row justify-content-center">
    <div class="col-lg-7">
        <div class="premium-card p-4 p-md-5 animate-slide-up">
            <div class="text-center mb-5">
                <div class="icon-shape bg-primary bg-opacity-10 text-primary mb-3 mx-auto" style="width: 70px; height: 70px; font-size: 2rem;">
                    <i class="fas fa-calendar-check"></i>
                </div>
                <h4 class="fw-bold">@ViewBag.SessionName</h4>
                <p class="text-secondary">@Localizer["EnrollMemberDesc"]</p>
            </div>

            <form asp-action="Create" method="post" id="enrollmentForm">
                <div asp-validation-summary="ModelOnly" class="text-danger small mb-3"></div>
                <input type="hidden" asp-for="SessionId" />

                <div class="mb-5">
                    <label asp-for="MemberId" class="form-label fw-bold small text-uppercase text-secondary">@Localizer["SelectMember"]</label>
                    <div class="input-group input-group-lg">
                        <span class="input-group-text bg-light border-end-0"><i class="fas fa-search text-secondary"></i></span>
                        <select asp-for="MemberId" asp-items="@ViewBag.Members" class="form-select border-start-0 shadow-none searchable-select">
                            @if (ViewBag.Members == null || !((IEnumerable<SelectListItem>)ViewBag.Members).Any())
                            {
                                <option value="">@Localizer["NoAvailableMembers"]</option>
                            }
                            else
                            {
                                <option value="">@Localizer["SelectAvailableMember"]</option>
                            }
                        </select>
                    </div>
                    <span asp-validation-for="MemberId" class="text-danger small mt-1 d-block"></span>
                </div>

                <div class="alert alert-info bg-primary bg-opacity-10 border-0 p-4 rounded-4 mb-5">
                    <div class="d-flex">
                        <i class="fas fa-info-circle text-primary mt-1 me-3 fs-5"></i>
                        <div>
                            <h6 class="fw-bold text-primary mb-1">@Localizer["BookingPolicy"]</h6>
                            <p class="text-secondary small mb-0">@Localizer["BookingPolicyDesc"]</p>
                        </div>
                    </div>
                </div>

                <div class="d-grid pt-2">
                    <button type="submit" class="btn btn-primary btn-lg rounded-pill fw-bold shadow-sm" id="submitBtn">
                        <i class="fas fa-check me-2"></i> @Localizer["ConfirmEnrollment"]
                    </button>
                    <button class="btn btn-primary d-none" type="button" disabled id="loadingBtn">
                        <span class="spinner-border spinner-border-sm me-2" role="status" aria-hidden="true"></span>
                        @Localizer["Processing"]
                    </button>
                    <a asp-action="GetMembersForUpcomingSession" asp-route-id="@Model.SessionId" class="btn btn-link text-secondary mt-3 text-decoration-none small">
                        @Localizer["CancelAndReturn"]
                    </a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}

