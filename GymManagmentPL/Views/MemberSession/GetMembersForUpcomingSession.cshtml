@inject IStringLocalizer<SharedResource> Localizer
@model GymManagmentBLL.ViewModels.MemberSessionViewModel.SessionMembersViewModel

@{
    ViewData["Title"] = Localizer["SessionRegistry"];
}

<div class="row mb-4 align-items-center mt-4">
    <div class="col-md-6">
        <nav aria-label="breadcrumb">
            <ol class="breadcrumb mb-1">
                <li class="breadcrumb-item"><a asp-action="Index">@Localizer["Bookings"]</a></li>
                <li class="breadcrumb-item active">@Localizer["Registry"]</li>
            </ol>
        </nav>
        <h2 class="fw-bold mb-0">@Localizer["Registry"]: @Model.SessionName</h2>
    </div>
    <div class="col-md-6 text-md-end">
        <a asp-action="Create" asp-route-id="@Model.SessionId" class="btn btn-primary rounded-pill px-4">
            <i class="fas fa-plus me-1"></i> @Localizer["EnrollMember"]
        </a>
    </div>
</div>

<div class="premium-card p-0 shadow-sm border-0 overflow-hidden">
    <div class="table-responsive">
        <table class="table table-hover align-middle mb-0">
            <thead class="bg-light">
                <tr>
                    <th class="ps-4">@Localizer["MemberName"]</th>
                    <th>@Localizer["BookingDate"]</th>
                    <th class="text-center">@Localizer["Status"]</th>
                    <th class="text-center">@Localizer["Actions"]</th>
                </tr>
            </thead>
            <tbody>
                @if (Model.Bookings != null && Model.Bookings.Any())
                {
                    @foreach (var booking in Model.Bookings)
                    {
                        <tr>
                            <td class="ps-4 fw-bold">@booking.MemberName</td>
                            <td>@booking.BookingDate</td>
                            <td class="text-center">
                                @if (booking.Status == "Waitlisted")
                                {
                                    <span class="badge bg-warning text-dark">@Localizer["Waitlisted"]</span>
                                }
                                else
                                {
                                    <span class="badge bg-success">@Localizer["Confirmed"]</span>
                                }
                            </td>
                            <td class="text-center">
                                <button type="button" class="btn btn-sm btn-outline-danger border-0 remove-member-btn rounded-pill px-3" 
                                        data-member-id="@booking.MemberId"
                                        data-member-name="@booking.MemberName">
                                    <i class="fas fa-user-minus me-1"></i> @Localizer["Remove"]
                                </button>
                            </td>
                        </tr>
                    }
                }
                else
                {
                    <tr>
                        <td colspan="3" class="text-center py-5">
                            <div class="py-4 text-secondary">
                                <i class="fas fa-clipboard-list fs-1 opacity-25 mb-3"></i>
                                <h5>@Localizer["RegistryEmpty"]</h5>
                                <p>@Localizer["RegistryEmptyDesc"]</p>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

<div class="mt-4">
    <a asp-action="Index" class="btn btn-light border rounded-pill px-4"><i class="fas fa-arrow-left me-2"></i> @Localizer["BackToSessions"]</a>
</div>

<form id="removeForm" asp-action="Cancel" method="post" style="display:none;">
    @Html.AntiForgeryToken()
    <input type="hidden" name="memberId" id="removeMemberId" />
    <input type="hidden" name="sessionId" value="@Model.SessionId" />
</form>

@section Scripts {
    <script src="~/js/session.js" asp-append-version="true"></script>
}
