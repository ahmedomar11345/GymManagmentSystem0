@model GymManagmentBLL.Service.Interfaces.UnifiedAttendanceViewModel
@inject IStringLocalizer<SharedResource> Localizer
@{
    ViewData["Title"] = Localizer["AttendanceHistory"];
}

<div class="container-fluid py-4">
    <!-- Action Header -->
    <div class="row mb-4">
        <div class="col-12">
            <div class="glass-header p-4 rounded-4 shadow-sm d-flex flex-wrap justify-content-between align-items-center gap-3">
                <div class="d-flex align-items-center">
                    <div class="header-icon-circle bg-primary-gradient me-3">
                        <i class="fas fa-calendar-alt text-white"></i>
                    </div>
                    <div>
                        <h2 class="h4 fw-black mb-0">@Localizer["DailyAttendanceReport"]</h2>
                        <p class="text-muted mb-0 small"><i class="far fa-clock me-1"></i> @Model.SelectedDate.ToString("D")</p>
                    </div>
                </div>

                <div class="d-flex align-items-center gap-3 flex-wrap">
                    <form asp-action="History" method="get" class="d-flex gap-2 align-items-center">
                        <div class="date-picker-wrapper">
                            <i class="fas fa-calendar-day text-primary"></i>
                            <input type="date" name="date" class="form-control premium-date-input" 
                                   value="@Model.SelectedDate.ToString("yyyy-MM-dd")" onchange="this.form.submit()" />
                        </div>
                    </form>
                    
                    <div class="vertical-divider mx-2 d-none d-md-block"></div>
                    
                    <div class="d-flex gap-2">
                         <a asp-action="MonthlySummary" class="btn btn-sm btn-outline-primary rounded-pill px-3">
                            <i class="fas fa-medal me-1"></i> @Localizer["MonthlyLeaderboard"]
                        </a>
                        <a asp-action="TrainerMonthlySummary" class="btn btn-sm btn-outline-indigo rounded-pill px-3">
                            <i class="fas fa-chart-bar me-1"></i> @Localizer["TrainerMonthlyReport"]
                        </a>
                         <button onclick="window.print()" class="btn btn-sm btn-outline-secondary rounded-pill px-3">
                            <i class="fas fa-print me-1"></i> @Localizer["Print"]
                        </button>
                        <a asp-action="Scanner" class="btn btn-sm btn-primary rounded-pill px-3">
                            <i class="fas fa-plus me-1"></i> @Localizer["NewAttendance"]
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Stats Summary -->
    <div class="row g-4 mb-4">
        <div class="col-md-6 col-lg-3">
            <div class="simple-stat-card p-4 rounded-4 bg-white border-0 shadow-sm transition-hover">
                <div class="d-flex justify-content-between mb-2">
                    <span class="text-muted small uppercase-tracking">@Localizer["Members"]</span>
                    <i class="fas fa-users text-primary"></i>
                </div>
                <h2 class="fw-black mb-0">@Model.TotalMemberCheckIns</h2>
                <div class="mt-2 text-primary small fw-bold">
                    @Localizer["TotalCheckIns"]
                </div>
            </div>
        </div>
        <div class="col-md-6 col-lg-3">
            <div class="simple-stat-card p-4 rounded-4 bg-white border-0 shadow-sm transition-hover">
                <div class="d-flex justify-content-between mb-2">
                    <span class="text-muted small uppercase-tracking">@Localizer["Trainers"]</span>
                    <i class="fas fa-user-tie text-indigo"></i>
                </div>
                <h2 class="fw-black mb-0">@Model.TotalTrainerCheckIns</h2>
                <div class="mt-2 text-indigo small fw-bold">
                    @Localizer["DailyAttendance"]
                </div>
            </div>
        </div>
        <div class="col-md-6 col-lg-3">
            <div class="simple-stat-card p-4 rounded-4 bg-white border-0 shadow-sm transition-hover">
                <div class="d-flex justify-content-between mb-2">
                    <span class="text-muted small uppercase-tracking">@Localizer["BusyTime"]</span>
                    <i class="fas fa-bolt text-warning"></i>
                </div>
                @{
                    var busyHour = Model.MemberAttendance.Any() 
                        ? Model.MemberAttendance.GroupBy(c => DateTime.Parse(c.CheckInTime).Hour)
                                                .OrderByDescending(g => g.Count())
                                                .FirstOrDefault()?.Key 
                        : null;
                    var busyTime = busyHour.HasValue ? new DateTime(1, 1, 1, busyHour.Value, 0, 0).ToString("hh:mm tt") : "--";
                }
                <h2 class="fw-black mb-0">@busyTime</h2>
                <p class="text-muted x-small mt-2 mb-0">@Localizer["HighestEntryPeak"]</p>
            </div>
        </div>
        <div class="col-md-6 col-lg-3">
            <div class="simple-stat-card p-4 rounded-4 bg-white border-0 shadow-sm transition-hover">
                <div class="d-flex justify-content-between mb-2">
                    <span class="text-muted small uppercase-tracking">@Localizer["Status"]</span>
                    <i class="fas fa-circle @(Model.TotalMemberCheckIns > 0 ? "text-success" : "text-secondary")"></i>
                </div>
                <h2 class="fw-black mb-0">@(Model.TotalMemberCheckIns > 0 ? Localizer["Active"] : Localizer["NoData"])</h2>
                <p class="text-muted x-small mt-2 mb-0">@Localizer["GymCurrentState"]</p>
            </div>
        </div>
    </div>

    <!-- Tabs Content -->
    <div class="row">
        <div class="col-12">
            <div class="card border-0 shadow-ultra rounded-4 overflow-hidden">
                <div class="card-header bg-white p-0 border-0">
                    <ul class="nav nav-tabs nav-fill border-0" id="attendanceTabs" role="tablist">
                        <li class="nav-item">
                            <button class="nav-link active py-4 fw-bold" id="members-tab" data-bs-toggle="tab" data-bs-target="#members" type="button" role="tab">
                                <i class="fas fa-users me-2"></i>@Localizer["Members"] <span class="badge bg-soft-primary text-primary ms-1">@Model.TotalMemberCheckIns</span>
                            </button>
                        </li>
                        <li class="nav-item">
                            <button class="nav-link py-4 fw-bold" id="trainers-tab" data-bs-toggle="tab" data-bs-target="#trainers" type="button" role="tab">
                                <i class="fas fa-user-tie me-2"></i>@Localizer["Trainers"] <span class="badge bg-soft-indigo text-indigo ms-1">@Model.TotalTrainerCheckIns</span>
                            </button>
                        </li>
                    </ul>
                </div>
                <div class="card-body p-0">
                    <div class="tab-content" id="attendanceTabsContent">
                        <!-- Member Tab -->
                        <div class="tab-pane fade show active" id="members" role="tabpanel">
                            <div class="p-4 bg-gray-50 border-bottom d-flex justify-content-between align-items-center">
                                <h6 class="fw-bold mb-0">@Localizer["MemberLogs"]</h6>
                                <div class="search-box-minimal">
                                    <i class="fas fa-search"></i>
                                    <input type="text" id="memberFilter" placeholder="@Localizer["SearchMembers"]..." onkeyup="filterTable('memberFilter', 'member-row')">
                                </div>
                            </div>
                            <div class="table-responsive">
                                <table class="table table-hover align-middle mb-0">
                                    <thead class="bg-white">
                                        <tr>
                                            <th class="ps-4 text-muted x-small uppercase-tracking">@Localizer["Time"]</th>
                                            <th class="text-muted x-small uppercase-tracking">@Localizer["Member"]</th>
                                            <th class="text-muted x-small uppercase-tracking">@Localizer["Status"]</th>
                                            <th class="pe-4 text-muted x-small uppercase-tracking">@Localizer["Notes"]</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @if (Model.MemberAttendance.Any())
                                        {
                                            @foreach (var item in Model.MemberAttendance)
                                            {
                                                <tr class="member-row animate__animated animate__fadeIn">
                                                    <td class="ps-4">
                                                        <span class="history-time">@item.CheckInTime</span>
                                                    </td>
                                                    <td>
                                                        <div class="d-flex align-items-center">
                                                            @if (!string.IsNullOrEmpty(item.MemberPhoto))
                                                            {
                                                                <img src="/images/members/@item.MemberPhoto" class="avatar-minimal me-2 shadow-sm" style="object-fit: cover;" alt="" />
                                                            }
                                                            else
                                                            {
                                                                <div class="avatar-minimal me-2">@item.MemberName.Substring(0, 1).ToUpper()</div>
                                                            }
                                                            <div>
                                                                <a asp-controller="Member" asp-action="Details" asp-route-id="@item.MemberId" class="fw-bold text-dark text-decoration-none">@item.MemberName</a>
                                                                <div class="x-small text-muted">ID: #@item.MemberId</div>
                                                            </div>
                                                        </div>
                                                    </td>
                                                    <td>
                                                        <span class="badge-success-minimal">
                                                            <i class="fas fa-check-circle me-1"></i> @Localizer["Verified"]
                                                        </span>
                                                    </td>
                                                    <td class="pe-4 text-muted x-small">@(string.IsNullOrEmpty(item.Notes) ? "--" : item.Notes)</td>
                                                </tr>
                                            }
                                        }
                                        else
                                        {
                                            <tr>
                                                <td colspan="4" class="text-center py-5">
                                                    <i class="fas fa-calendar-times fa-4x text-muted opacity-10 mb-3"></i>
                                                    <h5 class="text-muted">@Localizer["NoCheckInsFound"]</h5>
                                                </td>
                                            </tr>
                                        }
                                    </tbody>
                                </table>
                            </div>
                        </div>

                        <!-- Trainer Tab -->
                        <div class="tab-pane fade" id="trainers" role="tabpanel">
                             <div class="p-4 bg-gray-50 border-bottom d-flex justify-content-between align-items-center">
                                <h6 class="fw-bold mb-0">@Localizer["TrainerLogs"]</h6>
                                <div class="search-box-minimal">
                                    <i class="fas fa-search"></i>
                                    <input type="text" id="trainerFilter" placeholder="@Localizer["SearchTrainers"]..." onkeyup="filterTable('trainerFilter', 'trainer-row')">
                                </div>
                            </div>
                            <div class="table-responsive">
                                <table class="table table-hover align-middle mb-0">
                                    <thead class="bg-white">
                                        <tr>
                                            <th class="ps-4 text-muted x-small uppercase-tracking">@Localizer["Trainer"]</th>
                                            <th class="text-muted x-small uppercase-tracking">@Localizer["CheckIn"]</th>
                                            <th class="text-muted x-small uppercase-tracking">@Localizer["CheckOut"]</th>
                                            <th class="text-muted x-small uppercase-tracking">@Localizer["Duration"]</th>
                                            <th class="pe-4 text-muted x-small uppercase-tracking">@Localizer["Status"]</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @if (Model.TrainerAttendance.Any())
                                        {
                                            @foreach (var item in Model.TrainerAttendance)
                                            {
                                                <tr class="trainer-row animate__animated animate__fadeIn">
                                                    <td class="ps-4">
                                                        <div class="d-flex align-items-center">
                                                            @if (!string.IsNullOrEmpty(item.TrainerPhoto))
                                                            {
                                                                <img src="/images/trainers/@item.TrainerPhoto" class="avatar-minimal me-2 shadow-sm" style="object-fit: cover;" alt="" />
                                                            }
                                                            else
                                                            {
                                                                <div class="avatar-minimal me-2">@item.TrainerName.Substring(0, 1).ToUpper()</div>
                                                            }
                                                            <div>
                                                                <div class="fw-bold text-dark">@item.TrainerName</div>
                                                                <div class="x-small text-muted">ID: #@item.TrainerId</div>
                                                            </div>
                                                        </div>
                                                    </td>
                                                    <td>
                                                        <div class="time-box check-in">
                                                            <i class="fas fa-sign-in-alt me-1"></i> @item.CheckInTime
                                                        </div>
                                                    </td>
                                                    <td>
                                                        @if (item.CheckOutTime != null)
                                                        {
                                                            <div class="time-box check-out">
                                                                <i class="fas fa-sign-out-alt me-1"></i> @item.CheckOutTime
                                                            </div>
                                                        }
                                                        else
                                                        {
                                                            <span class="badge rounded-pill bg-soft-warning text-warning fw-bold small">In Progress</span>
                                                        }
                                                    </td>
                                                    <td>
                                                        <div class="duration-badge">
                                                            <i class="far fa-clock me-1"></i> @item.TotalHours <small>hrs</small>
                                                        </div>
                                                    </td>
                                                    <td class="pe-4">
                                                        @if (item.Status == "Out")
                                                        {
                                                            <span class="badge-success-minimal"><i class="fas fa-check-circle me-1"></i> @Localizer["Completed"]</span>
                                                        }
                                                        else
                                                        {
                                                            <span class="badge-pulse">@Localizer["Active"]</span>
                                                        }
                                                    </td>
                                                </tr>
                                            }
                                        }
                                        else
                                        {
                                            <tr>
                                                <td colspan="5" class="text-center py-5">
                                                    <i class="fas fa-user-clock fa-4x text-muted opacity-10 mb-3"></i>
                                                    <h5 class="text-muted">@Localizer["NoTrainerAttendance"]</h5>
                                                </td>
                                            </tr>
                                        }
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        function filterTable(inputId, rowClass) {
            const val = document.getElementById(inputId).value.toLowerCase();
            const rows = document.querySelectorAll('.' + rowClass);
            rows.forEach(row => {
                const name = row.querySelector('.fw-bold').innerText.toLowerCase();
                row.style.display = name.includes(val) ? '' : 'none';
            });
        }
    </script>
}

<style>
    .fw-black { font-weight: 900; }
    .uppercase-tracking { text-transform: uppercase; letter-spacing: 0.08em; font-weight: 800; }
    .x-small { font-size: 0.75rem; }
    .bg-primary-gradient { background: linear-gradient(135deg, #4f46e5 0%, #7c3aed 100%); }
    .transition-hover:hover { transform: translateY(-3px); box-shadow: 0 10px 20px rgba(0,0,0,0.05) !important; }
    .transition-hover { transition: all 0.3s ease; }

    .glass-header {
        background: rgba(255, 255, 255, 0.9);
        backdrop-filter: blur(10px);
        border: 1px solid #f1f5f9;
        position: sticky;
        top: 0;
        z-index: 10;
    }

    .header-icon-circle {
        width: 48px;
        height: 48px;
        border-radius: 50%;
        display: flex;
        align-items: center;
        justify-content: center;
        box-shadow: 0 8px 16px rgba(79, 70, 229, 0.2);
    }

    .vertical-divider {
        width: 1px;
        height: 30px;
        background: #e2e8f0;
    }

    .simple-stat-card {
        border-radius: 20px;
        border: 1px solid #f1f5f9 !important;
    }

    .bg-soft-primary { background: rgba(79, 70, 229, 0.1); }
    .bg-soft-indigo { background: rgba(99, 102, 241, 0.1); }
    .bg-soft-success { background: rgba(16, 185, 129, 0.1); }
    .bg-soft-warning { background: rgba(245, 158, 11, 0.1); }
    .text-indigo { color: #6366f1; }
    .btn-outline-indigo { color: #6366f1; border-color: #6366f1; }
    .btn-outline-indigo:hover { background-color: #6366f1; color: white; }

    .nav-tabs .nav-link {
        border: none;
        color: #94a3b8;
        border-bottom: 3px solid transparent;
        transition: all 0.3s;
    }
    .nav-tabs .nav-link.active {
        color: #4f46e5;
        border-bottom: 3px solid #4f46e5;
        background: rgba(79, 70, 229, 0.02);
    }
    .nav-tabs .nav-link:hover:not(.active) {
        border-bottom: 3px solid #e2e8f0;
        color: #64748b;
    }

    .search-box-minimal {
        position: relative;
        width: 260px;
    }
    .search-box-minimal i { position: absolute; left: 12px; top: 50%; transform: translateY(-50%); color: #94a3b8; }
    .search-box-minimal input {
        width: 100%;
        padding: 6px 15px 6px 35px;
        border-radius: 10px;
        border: 1px solid #e2e8f0;
        background: white;
        font-size: 0.85rem;
    }

    .avatar-minimal {
        width: 35px;
        height: 35px;
        border-radius: 10px;
        background: #f8fafc;
        display: flex;
        align-items: center;
        justify-content: center;
        font-weight: 800;
        color: #4f46e5;
        border: 1px solid #e2e8f0;
    }

    .history-time { font-weight: 800; color: #1e293b; }

    .badge-success-minimal { color: #10b981; font-weight: 700; font-size: 0.75rem; }
    
    .time-box {
        display: inline-flex;
        align-items: center;
        padding: 4px 10px;
        border-radius: 8px;
        font-weight: 800;
        font-size: 0.8rem;
    }
    .time-box.check-in { background: rgba(16, 185, 129, 0.1); color: #059669; }
    .time-box.check-out { background: rgba(239, 68, 68, 0.1); color: #dc2626; }

    .duration-badge { font-weight: 800; color: #475569; }

    .badge-pulse {
        color: #d97706;
        font-weight: 800;
        font-size: 0.75rem;
        animation: pulse-orange 2s infinite;
    }
    @@keyframes pulse-orange {
        0% { opacity: 1; }
        50% { opacity: 0.5; }
        100% { opacity: 1; }
    }

    .shadow-ultra { box-shadow: 0 20px 25px -5px rgba(0, 0, 0, 0.05); }

    .premium-date-input {
        border-radius: 10px;
        border: 1px solid #e2e8f0;
        padding-left: 35px;
        font-weight: 700;
        font-size: 0.9rem;
    }
    .date-picker-wrapper { position: relative; }
    .date-picker-wrapper i { position: absolute; left: 12px; top: 50%; transform: translateY(-50%); z-index: 5; }

    [data-theme="dark"] .glass-header { background: rgba(30, 41, 59, 0.9); border-color: #334155; }
    [data-theme="dark"] .bg-white, [data-theme="dark"] .nav-tabs .nav-link.active { background: #1e293b !important; color: white; }
    [data-theme="dark"] .bg-gray-50 { background: #0f172a !important; }
    [data-theme="dark"] .text-dark { color: #f1f5f9 !important; }
    [data-theme="dark"] .search-box-minimal input, [data-theme="dark"] .premium-date-input { background: #0f172a; border-color: #334155; color: white; }
    [data-theme="dark"] .avatar-minimal { background: #0f172a; border-color: #334155; }

    @@media print {
        .main-header, .sidebar, form, .btn, .nav-tabs, .search-box-minimal { display: none !important; }
        .main-content { margin: 0 !important; padding: 0 !important; }
        .card { border: none !important; }
        .tab-content > .tab-pane { display: block !important; opacity: 1 !important; }
    }

    html[dir="rtl"] .search-box-minimal i { left: auto; right: 12px; }
    html[dir="rtl"] .search-box-minimal input { padding-left: 15px; padding-right: 35px; }
    html[dir="rtl"] .date-picker-wrapper i { left: auto; right: 12px; }
    html[dir="rtl"] .premium-date-input { padding-left: 15px; padding-right: 35px; }
</style>
