@model IEnumerable<GymManagmentDAL.Entities.TrainerAttendance>
@inject IStringLocalizer<SharedResource> Localizer
@{
    ViewData["Title"] = Localizer["DailyAttendance"];
    var reportDate = (DateTime)ViewBag.Date;
}

<div class="container-fluid py-4">
    <!-- Header Section -->
    <div class="row mb-4">
        <div class="col-12">
            <div class="premium-card-header p-4 rounded-4 shadow-sm d-flex flex-wrap justify-content-between align-items-center gap-3">
                <div class="d-flex align-items-center">
                    <div class="header-icon-box bg-indigo text-white me-3">
                        <i class="fas fa-calendar-check fs-4"></i>
                    </div>
                    <div>
                        <h1 class="h3 fw-black mb-1">@Localizer["DailyAttendanceReport"]</h1>
                        <p class="text-muted mb-0"><i class="far fa-clock me-1"></i> @reportDate.ToString("dddd, dd MMMM yyyy")</p>
                    </div>
                </div>
                
                <div class="d-flex flex-wrap gap-2 align-items-center">
                    <form asp-action="DailyReport" method="get" class="d-flex gap-2">
                        <div class="date-picker-wrapper">
                            <i class="fas fa-calendar-alt"></i>
                            <input type="date" name="date" class="form-control premium-date-input" value="@reportDate.ToString("yyyy-MM-dd")" onchange="this.form.submit()" />
                        </div>
                    </form>
                    <button onclick="window.print()" class="btn btn-premium-secondary">
                        <i class="fas fa-print me-2"></i>@Localizer["Print"]
                    </button>
                </div>
            </div>
        </div>
    </div>

    <!-- Stats Overview -->
    <div class="row g-4 mb-4">
        <div class="col-md-4 col-lg-3">
            <div class="mini-stats-card p-3 shadow-sm rounded-4 border-0 bg-white dark-bg-slate">
                <div class="d-flex align-items-center">
                    <div class="stats-icon-small bg-soft-primary text-primary me-3">
                        <i class="fas fa-users"></i>
                    </div>
                    <div>
                        <small class="text-muted d-block uppercase-tracking">@Localizer["TotalTrainers"]</small>
                        <h4 class="fw-black mb-0">@Model.Count()</h4>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-4 col-lg-3">
            <div class="mini-stats-card p-3 shadow-sm rounded-4 border-0 bg-white dark-bg-slate">
                <div class="d-flex align-items-center">
                    <div class="stats-icon-small bg-soft-success text-success me-3">
                        <i class="fas fa-check-double"></i>
                    </div>
                    <div>
                        <small class="text-muted d-block uppercase-tracking">@Localizer["Completed"]</small>
                        <h4 class="fw-black mb-0">@Model.Count(m => m.CheckOutTime.HasValue)</h4>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-4 col-lg-3">
            <div class="mini-stats-card p-3 shadow-sm rounded-4 border-0 bg-white dark-bg-slate">
                <div class="d-flex align-items-center">
                    <div class="stats-icon-small bg-soft-warning text-warning me-3">
                        <i class="fas fa-hourglass-half"></i>
                    </div>
                    <div>
                        <small class="text-muted d-block uppercase-tracking">@Localizer["InProgress"]</small>
                        <h4 class="fw-black mb-0">@Model.Count(m => !m.CheckOutTime.HasValue)</h4>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Attendance Table Card -->
    <div class="row">
        <div class="col-12">
            <div class="card border-0 shadow-ultra rounded-4 overflow-hidden">
                <div class="card-body p-0">
                    <div class="table-responsive">
                        <table class="table table-hover align-middle mb-0">
                            <thead class="bg-gray-50 dark-bg-navy">
                                <tr>
                                    <th class="ps-4 text-uppercase small fw-bold text-muted">@Localizer["Trainer"]</th>
                                    <th class="text-uppercase small fw-bold text-muted">@Localizer["CheckIn"]</th>
                                    <th class="text-uppercase small fw-bold text-muted">@Localizer["CheckOut"]</th>
                                    <th class="text-uppercase small fw-bold text-muted">@Localizer["Duration"]</th>
                                    <th class="text-uppercase small fw-bold text-muted">@Localizer["Lateness/OT"]</th>
                                    <th class="pe-4 text-uppercase small fw-bold text-muted">@Localizer["Status"]</th>
                                </tr>
                            </thead>
                            <tbody>
                                @if (!Model.Any())
                                {
                                    <tr>
                                        <td colspan="6" class="text-center py-5">
                                            <div class="empty-animation mb-3">
                                                <i class="fas fa-calendar-minus fa-4x text-muted opacity-25"></i>
                                            </div>
                                            <h5 class="text-muted">@Localizer["NoAttendanceRecordsForThisDay"]</h5>
                                            <p class="text-secondary small">لا يوجد سجلات حضور لهذا اليوم</p>
                                        </td>
                                    </tr>
                                }
                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <td class="ps-4">
                                            <div class="d-flex align-items-center">
                                                <div class="trainer-avatar-box me-3">@item.Trainer?.Name.Substring(0, 1).ToUpper()</div>
                                                <div>
                                                    <div class="fw-bold text-dark dark-text-white">@item.Trainer?.Name</div>
                                                    <div class="text-muted x-small">ID: #@item.TrainerId</div>
                                                </div>
                                            </div>
                                        </td>
                                        <td>
                                            <div class="time-box check-in">
                                                <i class="fas fa-sign-in-alt me-2"></i>
                                                <span>@item.CheckInTime?.ToString("hh:mm tt")</span>
                                            </div>
                                        </td>
                                        <td>
                                            @if (item.CheckOutTime.HasValue)
                                            {
                                                <div class="time-box check-out">
                                                    <i class="fas fa-sign-out-alt me-2"></i>
                                                    <span>@item.CheckOutTime?.ToString("hh:mm tt")</span>
                                                </div>
                                            }
                                            else
                                            {
                                                <span class="badge-pulse">@Localizer["OnDuty"]</span>
                                            }
                                        </td>
                                        <td>
                                            <div class="duration-badge">
                                                <i class="far fa-clock me-1"></i>
                                                <span>@item.TotalHours</span> <small>hrs</small>
                                            </div>
                                        </td>
                                        <td>
                                            <div class="d-flex gap-2">
                                                @if (item.DelayMinutes > 0)
                                                {
                                                    <span class="badge-soft-danger" title="Delay"><i class="fas fa-arrow-up me-1"></i> @item.DelayMinutes m</span>
                                                }
                                                @if (item.OvertimeMinutes > 0)
                                                {
                                                    <span class="badge-soft-success" title="Overtime"><i class="fas fa-plus me-1"></i> @item.OvertimeMinutes m</span>
                                                }
                                                @if (item.DelayMinutes == 0 && item.OvertimeMinutes == 0)
                                                {
                                                    <span class="text-muted small">--</span>
                                                }
                                            </div>
                                        </td>
                                        <td class="pe-4">
                                            @if (item.CheckOutTime.HasValue)
                                            {
                                                <span class="badge-modern success">
                                                    <i class="fas fa-check-circle me-1"></i> @Localizer["Completed"]
                                                </span>
                                            }
                                            else
                                            {
                                                <span class="badge-modern warning">
                                                    <i class="fas fa-spinner fa-spin me-1"></i> @Localizer["Active"]
                                                </span>
                                            }
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    .fw-black { font-weight: 900; }
    .uppercase-tracking { text-transform: uppercase; letter-spacing: 0.05em; font-size: 0.7rem; font-weight: 700; }
    .x-small { font-size: 0.75rem; }

    .premium-card-header {
        background: white;
        border: 1px solid #f1f5f9;
        box-shadow: 0 4px 6px -1px rgba(0,0,0,0.05);
    }
    
    [data-theme="dark"] .premium-card-header { background: #1e293b; border-color: #334155; }

    .header-icon-box {
        width: 48px;
        height: 48px;
        border-radius: 12px;
        display: flex;
        align-items: center;
        justify-content: center;
    }
    .bg-indigo { background: #4f46e5; }

    .date-picker-wrapper {
        position: relative;
    }
    .date-picker-wrapper i {
        position: absolute;
        left: 12px;
        top: 50%;
        transform: translateY(-50%);
        color: #4f46e5;
        pointer-events: none;
    }
    .premium-date-input {
        padding-left: 35px;
        border-radius: 10px;
        border: 1px solid #e2e8f0;
        font-weight: 600;
        cursor: pointer;
    }
    
    [data-theme="dark"] .premium-date-input { background: #0f172a; border-color: #334155; color: white; }

    .mini-stats-card {
        border: 1px solid #f1f5f9;
    }
    
    .stats-icon-small {
        width: 40px;
        height: 40px;
        border-radius: 10px;
        display: flex;
        align-items: center;
        justify-content: center;
        font-size: 1.1rem;
    }

    /* Table Styles */
    .trainer-avatar-box {
        width: 38px;
        height: 38px;
        border-radius: 10px;
        background: #f1f5f9;
        display: flex;
        align-items: center;
        justify-content: center;
        font-weight: 800;
        color: #4f46e5;
    }
    
    [data-theme="dark"] .trainer-avatar-box { background: #334155; color: #818cf8; }

    .time-box {
        display: inline-flex;
        align-items: center;
        padding: 6px 12px;
        border-radius: 8px;
        font-weight: 700;
        font-size: 0.85rem;
    }
    .time-box.check-in { background: rgba(16, 185, 129, 0.1); color: #059669; }
    .time-box.check-out { background: rgba(239, 68, 68, 0.1); color: #dc2626; }

    .badge-pulse {
        background: rgba(245, 158, 11, 0.1);
        color: #d97706;
        padding: 6px 14px;
        border-radius: 50px;
        font-weight: 800;
        font-size: 0.75rem;
        text-transform: uppercase;
        animation: pulse-orange 2s infinite;
    }

    @@keyframes pulse-orange {
        0% { box-shadow: 0 0 0 0 rgba(245, 158, 11, 0.4); }
        70% { box-shadow: 0 0 0 10px rgba(245, 158, 11, 0); }
        100% { box-shadow: 0 0 0 0 rgba(245, 158, 11, 0); }
    }

    .duration-badge {
        font-weight: 800;
        color: #475569;
    }
    
    [data-theme="dark"] .duration-badge { color: #cbd5e1; }

    .badge-soft-danger { background: rgba(239, 68, 68, 0.1); color: #dc2626; padding: 2px 8px; border-radius: 6px; font-weight: 700; font-size: 0.75rem; }
    .badge-soft-success { background: rgba(16, 185, 129, 0.1); color: #059669; padding: 2px 8px; border-radius: 6px; font-weight: 700; font-size: 0.75rem; }

    .badge-modern {
        padding: 6px 12px;
        border-radius: 8px;
        font-weight: 700;
        font-size: 0.75rem;
        display: inline-flex;
        align-items: center;
    }
    .badge-modern.success { background: #10b981; color: white; }
    .badge-modern.warning { background: #f59e0b; color: white; }

    .btn-premium-secondary {
        background: white;
        border: 1px solid #e2e8f0;
        border-radius: 10px;
        padding: 0.5rem 1rem;
        font-weight: 600;
        transition: all 0.2s;
    }
    .btn-premium-secondary:hover { background: #f8fafc; border-color: #cbd5e1; }
    
    [data-theme="dark"] .btn-premium-secondary { background: #0f172a; border-color: #334155; color: #94a3b8; }
    [data-theme="dark"] .btn-premium-secondary:hover { background: #1e293b; color: white; }

    .shadow-ultra { box-shadow: 0 20px 25px -5px rgba(0, 0, 0, 0.05), 0 10px 10px -5px rgba(0, 0, 0, 0.02); }
    
    [data-theme="dark"] .bg-gray-50 { background: #0f172a !important; }
    [data-theme="dark"] .dark-text-white { color: #f1f5f9 !important; }

    @@media print {
        .main-header, .sidebar, .btn, form, .quick-action-btn { display: none !important; }
        .main-content { margin: 0 !important; padding: 0 !important; }
        .premium-card-header { border: none !important; box-shadow: none !important; }
        .shadow-ultra { box-shadow: none !important; }
    }
</style>

