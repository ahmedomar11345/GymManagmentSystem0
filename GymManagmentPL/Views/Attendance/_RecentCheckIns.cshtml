@inject IStringLocalizer<SharedResource> Localizer
@model IEnumerable<GymManagmentBLL.Service.Interfaces.CheckInViewModel>

<div class="activity-list-container">
    @if (Model != null && Model.Any())
    {
        <div class="list-group list-group-flush gap-2">
            @foreach (var item in Model)
            {
                <div class="activity-item animate__animated animate__fadeInRight">
                    <div class="d-flex align-items-center p-3 rounded-4 bg-white bg-opacity-50 border border-light shadow-sm">
                        <div class="avatar-circle me-3">
                            <i class="fas fa-user text-primary"></i>
                        </div>
                        <div class="flex-grow-1">
                            <div class="d-flex justify-content-between align-items-center">
                                <h6 class="fw-bold mb-0 text-dark">@item.MemberName</h6>
                                <span class="badge bg-success bg-opacity-10 text-success rounded-pill small">
                                    <i class="fas fa-check-circle me-1"></i>Verified
                                </span>
                            </div>
                            <div class="d-flex justify-content-between mt-1">
                                <small class="text-muted">ID: #@item.MemberId</small>
                                <small class="text-primary-gradient fw-bold" style="font-size: 0.75rem;">
                                    <i class="far fa-clock me-1"></i>@DateTime.Parse(item.CheckInTime).ToShortTimeString()
                                </small>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    }
    else
    {
        <div class="text-center py-5 animate__animated animate__fadeIn">
            <div class="opacity-25 mb-3">
                <i class="fas fa-calendar-times fa-4x"></i>
            </div>
            <p class="text-muted mb-0">No scans recorded yet today.</p>
            <small class="text-muted opacity-50">لا توجد عمليات مسح مسجلة اليوم.</small>
        </div>
    }
</div>

<style>
    .activity-item {
        transition: transform 0.2s ease, box-shadow 0.2s ease;
    }
    .activity-item:hover {
        transform: translateX(5px);
    }
    .avatar-circle {
        width: 40px;
        height: 40px;
        background: rgba(99, 102, 241, 0.1);
        border-radius: 12px;
        display: flex;
        align-items: center;
        justify-content: center;
    }
    .text-primary-gradient {
        background: linear-gradient(135deg, #4F46E5 0%, #7C3AED 100%);
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
    }
    [data-theme="dark"] .bg-white {
        background: rgba(30, 41, 59, 0.5) !important;
        border-color: rgba(255,255,255,0.05) !important;
    }
</style>
