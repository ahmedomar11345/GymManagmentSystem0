@inject IStringLocalizer<SharedResource> Localizer
@model CreatePlanViewModel

@{
    ViewData["Title"] = Localizer["DesignNewPackage"];
}

<div class="row mb-4 align-items-center">
    <div class="col-md-6">
        <nav aria-label="breadcrumb">
            <ol class="breadcrumb mb-2">
                <li class="breadcrumb-item"><a asp-action="Index" class="text-decoration-none">@Localizer["Plans"]</a></li>
                <li class="breadcrumb-item active">@Localizer["NewPolicy"]</li>
            </ol>
        </nav>
        <h2 class="fw-bold mb-0">
            <i class="fas fa-gem text-primary me-2"></i>@Localizer["DesignPackage"]
        </h2>
    </div>
    <div class="col-md-6 text-md-end">
        <a asp-action="Index" class="btn btn-outline-secondary">
            <i class="fas fa-times me-2"></i>@Localizer["Cancel"]
        </a>
    </div>
</div>

<div class="row justify-content-center">
    <div class="col-lg-8">
        <div class="premium-card p-4 p-md-5">
            <form asp-action="Create" method="post" id="planForm">
                <div asp-validation-summary="ModelOnly" class="alert alert-danger rounded-4 border-0 mb-4" role="alert"></div>

                <div class="mb-4">
                    <label asp-for="Name" class="form-label fw-bold small text-uppercase text-secondary">@Localizer["PackageName"]</label>
                    <div class="input-group input-group-lg">
                        <span class="input-group-text bg-light border-end-0"><i class="fas fa-edit text-secondary"></i></span>
                        <input asp-for="Name" class="form-control border-start-0 shadow-none fw-bold" placeholder="@Localizer["PlanName"]" />
                    </div>
                    <span asp-validation-for="Name" class="text-danger small"></span>
                </div>

                <div class="row g-4 mb-4">
                    <div class="col-md-6">
                        <label asp-for="Price" class="form-label fw-bold small text-uppercase text-secondary">@Localizer["PackagePrice"]</label>
                        <div class="input-group input-group-lg">
                            <span class="input-group-text bg-light border-end-0 text-primary fw-bold">@Localizer["EGP"]</span>
                            <input asp-for="Price" class="form-control border-start-0 shadow-none" placeholder="0.00" type="number" step="0.01" />
                        </div>
                        <span asp-validation-for="Price" class="text-danger small"></span>
                    </div>

                    <div class="col-md-6">
                        <label asp-for="DurationDays" class="form-label fw-bold small text-uppercase text-secondary">@Localizer["DurationPolicy"]</label>
                        <div class="input-group input-group-lg">
                            <span class="input-group-text bg-light border-end-0"><i class="fas fa-calendar-day text-secondary"></i></span>
                            <input asp-for="DurationDays" class="form-control border-start-0 shadow-none" placeholder="30" type="number" />
                            <span class="input-group-text bg-white border-start-0 text-secondary small">@Localizer["DurationDaysText"]</span>
                        </div>
                        <span asp-validation-for="DurationDays" class="text-danger small"></span>
                    </div>
                </div>

                <div class="mb-5">
                    <label asp-for="Description" class="form-label fw-bold small text-uppercase text-secondary">@Localizer["PlanBenefitsRules"]</label>
                    <textarea asp-for="Description" class="form-control" rows="4" 
                              placeholder="@Localizer["PlanDescriptionPlaceholder"]"></textarea>
                    <span asp-validation-for="Description" class="text-danger small"></span>
                    <div class="mt-2 small text-secondary">
                        <i class="fas fa-info-circle me-1"></i> @Localizer["PlanDescriptionTip"]
                    </div>
                </div>

                <div class="alert alert-warning bg-warning bg-opacity-10 border-0 rounded-4 p-3 mb-5">
                    <div class="d-flex align-items-center">
                        <div class="icon-shape bg-warning text-dark me-3">
                            <i class="fas fa-exclamation-circle"></i>
                        </div>
                        <div class="small">
                            <strong>@Localizer["Note"]:</strong> @Localizer["NewPlanActivationNote"]
                        </div>
                    </div>
                </div>

                <!-- Action Buttons -->
                <div class="d-flex justify-content-end gap-3 pt-4 border-top">
                    <a asp-action="Index" class="btn btn-outline-secondary px-5 py-2 rounded-pill fw-bold">
                        @Localizer["Discard"]
                    </a>
                    <button type="submit" class="btn btn-primary px-5 py-2 rounded-pill fw-bold shadow-sm">
                        @Localizer["CreatePackage"]
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
