@inject IStringLocalizer<SharedResource> Localizer
@model GymManagmentBLL.ViewModels.PlanViewModel.PlanViewModel

@{
    ViewData["Title"] = Localizer["PlanDetails"];
}

@section Styles {
    <link rel="stylesheet" href="~/css/plan.css" asp-append-version="true" />
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6 col-lg-5">
            <div class="premium-card plan-card border-0 overflow-hidden shadow-lg">
                <!-- Header -->
                <div class="plan-header @(Model.IsActive ? "plan-header-active" : "plan-header-inactive") py-5">
                    <div class="plan-badge bg-white text-dark shadow-sm">
                        @(Model.IsActive ? Localizer["Active"] : Localizer["Inactive"])
                    </div>
                    <i class="fas fa-crown fa-3x mb-3 opacity-75"></i>
                    <h2 class="fw-bold mb-0">@Model.Name</h2>
                </div>

                <div class="p-4 p-md-5">
                    <!-- Price -->
                    <div class="plan-price-wrapper mb-5">
                        <div class="plan-price-display">@Model.Price</div>
                        <span class="plan-currency">@Localizer["EGPPerPackage"]</span>
                    </div>

                    <!-- Features List -->
                    <ul class="plan-features ps-0 mb-5">
                        <li class="mb-4">
                            <div class="d-flex align-items-center">
                                <div class="icon-box bg-light text-primary rounded-circle p-3 me-3">
                                    <i class="fas fa-calendar-alt fa-fw fa-lg"></i>
                                </div>
                                <div>
                                    <span class="text-secondary small text-uppercase fw-bold d-block mb-1">@Localizer["Duration"]</span>
                                    <span class="h5 fw-bold text-dark mb-0">@Model.DurationDays @Localizer["DurationDaysText"]</span>
                                </div>
                            </div>
                        </li>
                        <li class="mb-4">
                            <div class="d-flex align-items-start">
                                <div class="icon-box bg-light text-primary rounded-circle p-3 me-3">
                                    <i class="fas fa-info-circle fa-fw fa-lg"></i>
                                </div>
                                <div>
                                    <span class="text-secondary small text-uppercase fw-bold d-block mb-1">@Localizer["Description"]</span>
                                    <p class="text-dark mb-0 leading-relaxed">@Model.Description</p>
                                </div>
                            </div>
                        </li>
                        <li>
                            <div class="d-flex align-items-center">
                                <div class="icon-box bg-light rounded-circle p-3 me-3 @(Model.IsActive ? "text-success" : "text-danger")">
                                    <i class="fas @(Model.IsActive ? "fa-check-circle" : "fa-times-circle") fa-fw fa-lg"></i>
                                </div>
                                <div>
                                    <span class="text-secondary small text-uppercase fw-bold d-block mb-1">@Localizer["CurrentStatus"]</span>
                                    <span class="badge @(Model.IsActive ? "bg-success" : "bg-danger") px-3 py-2 rounded-pill">
                                        @(Model.IsActive ? Localizer["AvailableForNewMembers"] : Localizer["RegistrationClosed"])
                                    </span>
                                </div>
                            </div>
                        </li>
                    </ul>

                    <!-- Actions -->
                    <div class="d-grid gap-3">
                        <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-warning py-3 fw-bold text-dark shadow-sm rounded-pill">
                            <i class="fas fa-pen-fancy me-2"></i> @Localizer["EditPlanDetails"]
                        </a>

                        <form asp-action="Activate" asp-route-id="@Model.Id" method="post">
                            @Html.AntiForgeryToken()
                            <button type="button" 
                                    class="btn @(Model.IsActive ? "btn-outline-danger" : "btn-outline-success") w-100 py-3 fw-bold rounded-pill toggle-plan-btn"
                                    data-name="@Model.Name"
                                    data-active="@(Model.IsActive ? "true" : "false")">
                                <i class="fas @(Model.IsActive ? "fa-ban" : "fa-check") me-2"></i>
                                @(Model.IsActive ? Localizer["DeactivatePlan"] : Localizer["ActivatePlan"])
                            </button>
                        </form>

                        <a asp-action="Index" class="btn btn-link text-secondary text-decoration-none mt-2">
                            <i class="fas fa-arrow-left me-2"></i> @Localizer["BackToAllPlans"]
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="~/js/plan.js" asp-append-version="true"></script>
}