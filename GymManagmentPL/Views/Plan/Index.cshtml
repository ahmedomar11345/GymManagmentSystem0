@using Microsoft.Extensions.Localization
@inject IStringLocalizer<SharedResource> Localizer
@model IEnumerable<GymManagmentBLL.ViewModels.PlanViewModel.PlanViewModel>
@{
    ViewData["Title"] = Localizer["Plans"];
}

@section Styles {
    <link rel="stylesheet" href="~/css/plan.css" asp-append-version="true" />
}

<div class="row mb-4 align-items-center mt-4">
    <div class="col-md-6">
        <h2 class="fw-bold mb-0">@Localizer["MembershipPlans"]</h2>
        <p class="text-secondary">@Localizer["PlansDesc"]</p>
    </div>
    <div class="col-md-6 text-md-end">
        <a asp-controller="Home" asp-action="Index" class="btn btn-outline-secondary shadow-sm me-2">
            <i class="fas fa-arrow-left me-2"></i> @Localizer["Dashboard"]
        </a>
        <a asp-action="Create" class="btn btn-primary shadow-sm">
            <i class="fas fa-plus me-2"></i> @Localizer["CreateNewPlan"]
        </a>
    </div>
</div>

@if (Model is not null && Model.Any())
{
    <div class="row g-4 align-items-stretch">
        @foreach (var plan in Model)
        {
            <div class="col-12 col-md-6 col-lg-4">
                <div class="premium-card plan-card searchable-card h-100 p-0 overflow-hidden shadow-sm border-0 d-flex flex-column">
                    <div class="plan-header @(plan.IsActive ? "plan-header-active" : "plan-header-inactive")">
                        <div class="plan-badge">
                            @(plan.IsActive ? Localizer["Active"] : Localizer["Inactive"])
                        </div>
                        <h3 class="fw-bold mb-0">@plan.Name</h3>
                    </div>
                    
                    <div class="p-3 d-flex flex-column flex-grow-1">
                        <div class="plan-price-wrapper">
                            <div class="plan-price-display">@plan.Price</div>
                            <span class="plan-currency">@Localizer["EGPPerPackage"]</span>
                        </div>

                        <ul class="plan-features">
                            <li>
                                <i class="fas fa-calendar-alt text-primary me-3 fa-lg"></i>
                                <div>
                                    <span class="feature-label">@Localizer["Duration"]:</span>
                                    <span>@plan.DurationDays @Localizer["DurationDaysText"]</span>
                                </div>
                            </li>
                            <li>
                                <i class="fas fa-info-circle text-primary me-3 fa-lg"></i>
                                <div>
                                    <span class="feature-label">@Localizer["DescriptionLabel"]</span>
                                    <span class="text-muted d-block small mt-1">@plan.Description</span>
                                </div>
                            </li>
                        </ul>

                        <div class="plan-actions mt-auto">
                            <!-- View Details -->
                            <a asp-action="Details" asp-route-id="@plan.Id" class="btn btn-dark w-100 py-2 mb-2 rounded-pill shadow-sm">
                                <i class="fas fa-eye me-2"></i> @Localizer["ViewDetails"]
                            </a>
                            
                            <div class="d-flex gap-2">
                                <a asp-action="Edit" asp-route-id="@plan.Id" class="btn btn-outline-primary flex-fill rounded-pill">
                                    <i class="fas fa-pen small"></i> @Localizer["Edit"]
                                </a>
                                
                                <form asp-action="Activate" asp-route-id="@plan.Id" method="post" class="flex-fill">
                                    @Html.AntiForgeryToken()
                                    <button type="button" 
                                            class="btn @(plan.IsActive ? "btn-outline-danger" : "btn-outline-success") w-100 rounded-pill toggle-plan-btn"
                                            data-name="@plan.Name"
                                            data-active="@(plan.IsActive ? "true" : "false")">
                                        @if(plan.IsActive)
                                        {
                                            <i class="fas fa-times me-1"></i> <span>@Localizer["Deactivate"]</span>
                                        }
                                        else
                                        {
                                            <i class="fas fa-check me-1"></i> <span>@Localizer["Activate"]</span>
                                        }
                                    </button>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
}
else
{
    <div class="premium-card py-5 text-center shadow-sm">
        <div class="mb-4">
            <div class="bg-light rounded-circle d-inline-flex align-items-center justify-content-center" style="width: 80px; height: 80px;">
                <i class="fas fa-tags fs-1 text-secondary opacity-50"></i>
            </div>
        </div>
        <h4 class="fw-bold">@Localizer["NoPlansAvailable"]</h4>
        <p class="text-secondary mb-0">@Localizer["NoPlansDesc"]</p>
    </div>
}

@section Scripts {
    <script src="~/js/plan.js" asp-append-version="true"></script>
}