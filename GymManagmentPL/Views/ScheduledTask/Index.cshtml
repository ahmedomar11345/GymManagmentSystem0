@inject IStringLocalizer<SharedResource> Localizer
@{
    ViewData["Title"] = Localizer["ScheduledTasks"];
}

<div class="container py-4">
    <div class="row mb-4">
        <div class="col-12">
            <div class="premium-card p-4">
                <div class="d-flex align-items-center mb-3">
                    <div class="icon-shape bg-primary bg-opacity-10 text-primary me-3" style="width: 50px; height: 50px; border-radius: 12px; display: flex; align-items: center; justify-content: center;">
                        <i class="fas fa-clock fs-4"></i>
                    </div>
                    <div>
                        <h2 class="fw-bold mb-0">@Localizer["ScheduledTasks"]</h2>
                        <p class="text-secondary mb-0">@Localizer["ScheduledTasksDesc"]</p>
                    </div>
                </div>
            </div>
        </div>
    </div>

    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show border-0 shadow-sm mb-4 rounded-3" role="alert">
            <div class="d-flex align-items-center">
                <i class="fas fa-check-circle me-2 fs-5"></i>
                <div>@TempData["SuccessMessage"]</div>
            </div>
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    <!-- Language Selector -->
    <div class="row mb-4">
        <div class="col-12">
            <div class="premium-card p-3 d-flex align-items-center justify-content-between border-0" style="background-color: var(--card-bg);">
                <div class="d-flex align-items-center">
                    <i class="fas fa-language fs-4 text-primary me-3"></i>
                    <div>
                        <h6 class="fw-bold mb-0">@Localizer["EmailLanguage"]</h6>
                        <p class="text-secondary small mb-0">@Localizer["EmailLanguageDesc"]</p>
                    </div>
                </div>
                <div class="btn-group" role="group" aria-label="Language selection">
                    <input type="radio" class="btn-check" name="globalLang" id="langAr" value="true" checked onchange="updateFormsLang(true)">
                    <label class="btn btn-outline-primary px-4" for="langAr">العربية</label>

                    <input type="radio" class="btn-check" name="globalLang" id="langEn" value="false" onchange="updateFormsLang(false)">
                    <label class="btn btn-outline-primary px-4" for="langEn">English</label>
                </div>
            </div>
        </div>
    </div>

    <div class="row g-4">
        <!-- Membership Expiry Reminders -->
        <div class="col-md-6">
            <div class="premium-card p-4 h-100">
                <div class="d-flex align-items-start mb-3">
                    <div class="icon-shape bg-warning bg-opacity-10 text-warning me-3" style="width: 45px; height: 45px; border-radius: 10px; display: flex; align-items: center; justify-content: center;">
                        <i class="fas fa-calendar-times"></i>
                    </div>
                    <div class="flex-grow-1">
                        <h5 class="fw-bold mb-1">@Localizer["MembershipExpiryReminders"]</h5>
                        <p class="text-secondary small mb-3">@Localizer["ExpiryRemindersDesc"]</p>
                        
                        <form asp-action="RunExpiryReminders" method="post" class="d-flex gap-2 align-items-center">
                            @Html.AntiForgeryToken()
                            <input type="hidden" name="isArabic" class="task-lang-input" value="true" />
                            <div class="input-group input-group-sm" style="max-width: 220px;">
                                <span class="input-group-text">@Localizer["Before"]</span>
                                <input type="number" name="days" value="7" min="1" max="30" class="form-control" />
                                <span class="input-group-text">@Localizer["Day"]</span>
                            </div>
                            <button type="submit" class="btn btn-warning btn-sm">
                                <i class="fas fa-play me-1"></i> @Localizer["Run"]
                            </button>
                        </form>
                    </div>
                </div>
            </div>
        </div>

        <!-- Session Reminders -->
        <div class="col-md-6">
            <div class="premium-card p-4 h-100">
                <div class="d-flex align-items-start mb-3">
                    <div class="icon-shape bg-info bg-opacity-10 text-info me-3" style="width: 45px; height: 45px; border-radius: 10px; display: flex; align-items: center; justify-content: center;">
                        <i class="fas fa-bell"></i>
                    </div>
                    <div class="flex-grow-1">
                        <h5 class="fw-bold mb-1">@Localizer["SessionReminders"]</h5>
                        <p class="text-secondary small mb-3">@Localizer["SessionRemindersDesc"]</p>
                        
                        <form asp-action="RunSessionReminders" method="post" class="d-flex gap-2 align-items-center">
                            @Html.AntiForgeryToken()
                            <input type="hidden" name="isArabic" class="task-lang-input" value="true" />
                            <div class="input-group input-group-sm" style="max-width: 220px;">
                                <span class="input-group-text">@Localizer["Before"]</span>
                                <input type="number" name="hours" value="1" min="1" max="24" class="form-control" />
                                <span class="input-group-text">@Localizer["Hour"]</span>
                            </div>
                            <button type="submit" class="btn btn-info btn-sm text-white">
                                <i class="fas fa-play me-1"></i> @Localizer["Run"]
                            </button>
                        </form>
                    </div>
                </div>
            </div>
        </div>

        <!-- Birthday Wishes -->
        <div class="col-md-6">
            <div class="premium-card p-4 h-100">
                <div class="d-flex align-items-start mb-3">
                    <div class="icon-shape bg-success bg-opacity-10 text-success me-3" style="width: 45px; height: 45px; border-radius: 10px; display: flex; align-items: center; justify-content: center;">
                        <i class="fas fa-birthday-cake"></i>
                    </div>
                    <div class="flex-grow-1">
                        <h5 class="fw-bold mb-1">@Localizer["BirthdayWishes"]</h5>
                        <p class="text-secondary small mb-3">@Localizer["BirthdayWishesDesc"]</p>
                        
                        <form asp-action="RunBirthdayWishes" method="post" class="d-flex gap-2 align-items-center">
                            @Html.AntiForgeryToken()
                            <input type="hidden" name="isArabic" class="task-lang-input" value="true" />
                            <div class="input-group input-group-sm" style="max-width: 220px;">
                                <span class="input-group-text">@Localizer["DiscountPercentage"]</span>
                                <input type="number" name="discount" value="10" min="0" max="100" class="form-control" />
                                <span class="input-group-text">%</span>
                            </div>
                            <button type="submit" class="btn btn-success btn-sm">
                                <i class="fas fa-play me-1"></i> @Localizer["Run"]
                            </button>
                        </form>
                    </div>
                </div>
            </div>
        </div>

        <!-- Inactive Members Alert -->
        <div class="col-md-6">
            <div class="premium-card p-4 h-100">
                <div class="d-flex align-items-start mb-3">
                    <div class="icon-shape bg-danger bg-opacity-10 text-danger me-3" style="width: 45px; height: 45px; border-radius: 10px; display: flex; align-items: center; justify-content: center;">
                        <i class="fas fa-user-clock"></i>
                    </div>
                    <div class="flex-grow-1">
                        <h5 class="fw-bold mb-1">@Localizer["InactiveMembersAlert"]</h5>
                        <p class="text-secondary small mb-3">@Localizer["InactiveMembersAlertDesc"]</p>
                        
                        <form asp-action="RunInactiveAlerts" method="post" class="d-flex gap-2 align-items-center">
                            @Html.AntiForgeryToken()
                            <input type="hidden" name="isArabic" class="task-lang-input" value="true" />
                            <div class="input-group input-group-sm" style="max-width: 220px;">
                                <span class="input-group-text">@Localizer["Inactivity"]</span>
                                <input type="number" name="days" value="14" min="7" max="60" class="form-control" />
                                <span class="input-group-text">@Localizer["Day"]</span>
                            </div>
                            <button type="submit" class="btn btn-danger btn-sm">
                                <i class="fas fa-play me-1"></i> @Localizer["Run"]
                            </button>
                        </form>
                    </div>
                </div>
            </div>
        </div>

        <!-- QR Code Refresh -->
        <div class="col-md-6">
            <div class="premium-card p-4 h-100 border-primary border-opacity-10 bg-primary bg-opacity-10">
                <div class="d-flex align-items-start mb-3">
                    <div class="icon-shape bg-primary text-white me-3" style="width: 45px; height: 45px; border-radius: 10px; display: flex; align-items: center; justify-content: center;">
                        <i class="fas fa-qrcode"></i>
                    </div>
                    <div class="flex-grow-1">
                        <h5 class="fw-bold mb-1 text-primary">@Localizer["QRCodeRefresh"]</h5>
                        <p class="text-primary small mb-3 opacity-75">@Localizer["QRCodeRefreshDesc"]</p>
                        
                        <form id="qrRefreshForm" asp-action="RunKeyRefresh" method="post">
                            @Html.AntiForgeryToken()
                            <input type="hidden" name="isArabic" class="task-lang-input" value="true" />
                            <button type="button" class="btn btn-primary btn-sm rounded-pill px-4" 
                                    onclick="confirmSubmit(this.form, '@Localizer["QRCodeRefresh"]', '@Localizer["ConfirmQRCodeRefresh"]')">
                                <i class="fas fa-sync-alt me-1"></i> @Localizer["RefreshAllNow"]
                            </button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="row mt-4">
        <div class="col-12">
            <div class="premium-card p-4 border-0 text-white" style="background: linear-gradient(135deg, var(--primary-color) 0%, #1e40af 100%);">
                <div class="d-flex justify-content-between align-items-center flex-wrap gap-3">
                    <div>
                        <h5 class="fw-bold mb-1"><i class="fas fa-rocket me-2"></i>@Localizer["RunAllTasks"]</h5>
                        <p class="mb-0 text-white opacity-75 small">@Localizer["RunAllTasksDesc"]</p>
                    </div>
                    <form asp-action="RunAllTasks" method="post">
                        @Html.AntiForgeryToken()
                        <input type="hidden" name="isArabic" class="task-lang-input" value="true" />
                        <button type="button" class="btn btn-light btn-lg rounded-pill px-4 shadow-sm fw-bold"
                                style="color: #1a365d !important; background-color: #ffffff !important; border: none !important;"
                                onclick="confirmSubmit(this.form, '@Localizer["RunAllTasks"]', '@Localizer["RunAllTasksDesc"]', 'info')">
                            <i class="fas fa-play-circle me-2"></i> @Localizer["RunAll"]
                        </button>
                    </form>
                </div>
            </div>
        </div>
    </div>

    <div class="row mt-4">
        <div class="col-12">
            <div class="premium-card p-3 border-0" style="background-color: var(--card-bg); border-right: 4px solid var(--primary-color) !important;">
                <div class="d-flex align-items-start">
                    <i class="fas fa-info-circle me-3 mt-1 text-primary fs-5"></i>
                    <div class="text-main">
                        @Localizer["ScheduledTasksNote"]
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        function updateFormsLang(isAr) {
            document.querySelectorAll('.task-lang-input').forEach(input => {
                input.value = isAr;
            });
        }

        // Initialize on load
        document.addEventListener('DOMContentLoaded', function() {
            const arRadio = document.getElementById('langAr');
            if(arRadio) updateFormsLang(arRadio.checked);
        });
    </script>
}
