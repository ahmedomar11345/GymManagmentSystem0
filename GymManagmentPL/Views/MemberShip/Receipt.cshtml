@using GymManagmentBLL.Service.Interfaces
@model MemberShipViewModel
@inject IStringLocalizer<SharedResource> Localizer
@inject IGymSettingsService GymService
@{
    Layout = null; 
    var plan = ViewBag.Plan as PlanViewModel;
    var member = ViewBag.Member as MemberViewModel;
    var gymSettings = GymService.GetSettingsAsync().Result;
    
    var culture = System.Globalization.CultureInfo.CurrentUICulture;
    var isRtl = culture.TextInfo.IsRightToLeft;
    var direction = isRtl ? "rtl" : "ltr";
    var lang = culture.TwoLetterISOLanguageName;
}

<!DOCTYPE html>
<html lang="@lang" dir="@direction">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@Localizer["Receipt"] - @Model.MemberName</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap@(isRtl ? ".rtl" : "").min.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" />
    <style>
        @@import url('https://fonts.googleapis.com/css2?family=Cairo:wght@400;600;700;900&display=swap');
        
        :root {
            --invoice-primary: #0f172a;
            --invoice-accent: #3b82f6;
            --invoice-border: #e2e8f0;
            --invoice-bg: #f8fafc;
        }

        body {
            font-family: 'Cairo', sans-serif;
            background-color: var(--invoice-bg);
            color: #1e293b;
            -webkit-print-color-adjust: exact;
        }

        .invoice-wrapper {
            max-width: 850px;
            margin: 40px auto;
            padding: 0 20px;
        }

        .invoice-card {
            background: #ffffff;
            padding: 60px;
            border-radius: 24px;
            box-shadow: 0 20px 50px rgba(0,0,0,0.05);
            position: relative;
            border: 1px solid var(--invoice-border);
        }

        .invoice-card::before {
            content: '';
            position: absolute;
            top: 0; left: 0; right: 0;
            height: 10px;
            background: linear-gradient(90deg, var(--invoice-accent), #60a5fa);
            border-radius: 24px 24px 0 0;
        }

        .header-section {
            display: flex;
            justify-content: space-between;
            align-items: flex-start;
            margin-bottom: 60px;
        }

        .brand-h1 {
            font-weight: 900;
            font-size: 32px;
            margin: 0;
            color: var(--invoice-primary);
            letter-spacing: -1px;
        }

        .invoice-meta {
            text-align: @(isRtl ? "left" : "right");
        }

        .invoice-number {
            font-size: 14px;
            color: var(--invoice-accent);
            font-weight: 700;
            margin-bottom: 5px;
        }

        .info-grid {
            display: grid;
            grid-template-columns: 1fr 1fr;
            gap: 40px;
            margin-bottom: 50px;
        }

        .label-muted {
            font-size: 12px;
            text-transform: uppercase;
            font-weight: 700;
            color: #94a3b8;
            letter-spacing: 0.05em;
            margin-bottom: 10px;
            display: block;
        }

        .info-value {
            font-weight: 600;
            color: var(--invoice-primary);
        }

        .table-premium {
            width: 100%;
            border-collapse: separate;
            border-spacing: 0;
            margin-bottom: 40px;
        }

        .table-premium th {
            padding: 20px;
            background: #f1f5f9;
            font-weight: 700;
            text-align: @(isRtl ? "right" : "left");
            border-bottom: 2px solid var(--invoice-border);
        }

        .table-premium td {
            padding: 25px 20px;
            border-bottom: 1px solid var(--invoice-border);
        }

        .total-summary {
            margin-left: @(isRtl ? "0" : "auto");
            margin-right: @(isRtl ? "auto" : "0");
            width: 300px;
            background: #f8fafc;
            padding: 25px;
            border-radius: 16px;
        }

        .total-row {
            display: flex;
            justify-content: space-between;
            margin-bottom: 10px;
        }

        .total-row.final {
            margin-top: 15px;
            padding-top: 15px;
            border-top: 2px solid var(--invoice-border);
            font-weight: 900;
            font-size: 20px;
            color: var(--invoice-accent);
        }

        .paid-stamp {
            position: absolute;
            top: 220px;
            right: 150px;
            transform: rotate(-25deg);
            border: 4px solid #10b981;
            padding: 5px 20px;
            color: #10b981;
            font-size: 32px;
            font-weight: 900;
            opacity: 0.6;
            border-radius: 10px;
            text-transform: uppercase;
            letter-spacing: 2px;
            pointer-events: none;
        }

        .receipt-footer {
            margin-top: 60px;
            text-align: center;
            border-top: 1px solid var(--invoice-border);
            padding-top: 30px;
            font-size: 13px;
            color: #64748b;
        }

        .action-bar {
            margin-bottom: 30px;
        }

        @@media print {
            .action-bar, .btn-back { display: none !important; }
            .invoice-wrapper { margin: 0; width: 100%; max-width: 100%; }
            .invoice-card { box-shadow: none !important; border: none !important; padding: 40px; }
            body { background: white; }
        }
    </style>
</head>
<body>

<div class="invoice-wrapper">
    <!-- Action Bar (Hidden on print) -->
    <div class="action-bar d-flex justify-content-between align-items-center">
        <a href="javascript:history.back()" class="btn btn-light rounded-pill px-4">
            <i class="fas fa-@(isRtl ? "arrow-right" : "arrow-left") me-2"></i> @Localizer["Back"]
        </a>
        <div class="d-flex gap-2">
            <button onclick="window.print()" class="btn btn-primary rounded-pill px-4 shadow-sm">
                <i class="fas fa-print me-2"></i> @Localizer["Print"]
            </button>
            <form asp-action="SendReceiptEmail" method="post" class="d-inline">
                @Html.AntiForgeryToken()
                <input type="hidden" name="memberId" value="@Model.MemberId" />
                <input type="hidden" name="planId" value="@Model.PlanId" />
                <button type="submit" class="btn btn-outline-primary rounded-pill px-4">
                    <i class="fas fa-envelope me-2"></i> @Localizer["SendByEmail"]
                </button>
            </form>
        </div>
    </div>

    <!-- Invoice Content -->
    <div class="invoice-card">
        <!-- Paid Stamp -->
        <div class="paid-stamp">
            @(isRtl ? "تم الدفع" : "PAID")
        </div>

        <div class="header-section">
            <div class="brand">
                <h1 class="brand-h1">@gymSettings.GymName.ToUpper()</h1>
                <p class="text-secondary small mb-0">@gymSettings.Address</p>
                <p class="text-secondary small">@gymSettings.Phone</p>
            </div>
            <div class="invoice-meta">
                <h2 class="fw-bold mb-1">@Localizer["Receipt"]</h2>
                <div class="invoice-number">#@(Model.MemberId)@DateTime.Now.ToString("yyMMdd")</div>
                <div class="small text-muted">@DateTime.Now.ToString("dd MMM yyyy")</div>
            </div>
        </div>

        <div class="info-grid">
            <div class="bill-to">
                <span class="label-muted">@Localizer["Member"]</span>
                <div class="d-flex align-items-center">
                    @if (!string.IsNullOrEmpty(Model.MemberPhoto))
                    {
                        <img src="~/images/members/@Model.MemberPhoto" class="rounded-circle me-3" style="width: 50px; height: 50px; object-fit: cover;">
                    }
                    <div>
                        <div class="info-value">@Model.MemberName</div>
                        <div class="small text-muted">@member?.Email</div>
                    </div>
                </div>
            </div>
            <div class="bill-from">
                <span class="label-muted">@Localizer["MembershipDetails"]</span>
                <div class="info-value">@Model.PlanName</div>
                <div class="small text-muted">@Localizer["ExpiresOn"]: @Model.EndDate</div>
            </div>
        </div>

        <table class="table-premium">
            <thead>
                <tr>
                    <th>@Localizer["Plan"]</th>
                    <th>@Localizer["Duration"]</th>
                    <th class="text-end">@Localizer["Amount"]</th>
                </tr>
            </thead>
            <tbody>
                <tr>
                    <td>
                        <div class="fw-bold">@Model.PlanName Plan</div>
                        <div class="small text-muted">Full access to @gymSettings.GymName facilities</div>
                    </td>
                    <td>@(plan?.DurationDays ?? 0) @Localizer["DaysText"]</td>
                    <td class="text-end fw-bold">@(plan?.Price.ToString("N2")) @Localizer["EGP"]</td>
                </tr>
            </tbody>
        </table>

        <div class="d-flex justify-content-between align-items-end">
            <div class="qr-placeholder text-center opacity-25">
                <i class="fas fa-qrcode fa-5x"></i>
                <div class="x-small mt-1">S2S VERIFIED</div>
            </div>
            <div class="total-summary">
                <div class="total-row">
                    <span class="text-secondary">@Localizer["TotalRevenue"]</span>
                    <span class="fw-bold">@(plan?.Price.ToString("N2"))</span>
                </div>
                <div class="total-row">
                    <span class="text-secondary">@Localizer["Tax"] (0%)</span>
                    <span class="fw-bold">0.00</span>
                </div>
                <div class="total-row final">
                    <span>@Localizer["Total"]</span>
                    <span>@(plan?.Price.ToString("N2")) @Localizer["EGP"]</span>
                </div>
            </div>
        </div>

        <div class="receipt-footer">
            <p class="mb-2">@Localizer["ThankYouForChoosing"] @gymSettings.GymName</p>
            <div class="small opacity-50">
                This is a computer-generated receipt and does not require a signature.
            </div>
        </div>
    </div>
</div>

<script src="~/lib/jquery/dist/jquery.min.js"></script>
<script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
<script>
    $(document).ready(function() {
        @if (TempData["SuccessMessage"] != null) {
            <text>
            Swal.fire({ icon: 'success', title: '@Localizer["Success"]', text: '@Html.Raw(TempData["SuccessMessage"])', confirmButtonText: '@Localizer["OK"]' });
            </text>
        }
    });
</script>
</body>
</html>
