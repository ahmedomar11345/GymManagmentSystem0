@using GymManagmentBLL.Service.Interfaces
@model MemberShipViewModel
@inject IStringLocalizer<SharedResource> Localizer
@inject IGymSettingsService GymService
@{
    ViewData["Title"] = "Membership Receipt";
    Layout = null; // No layout for printable page
    var plan = ViewBag.Plan as PlanViewModel;
    var member = ViewBag.Member as MemberViewModel;
    var gymSettings = GymService.GetSettingsAsync().Result; // Sync call in view for simplicity, or use await if possible
}

<!DOCTYPE html>
<html lang="ar" dir="rtl">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>فاتورة اشتراك - @Model.MemberName</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.rtl.min.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" />
    <style>
        @@import url('https://fonts.googleapis.com/css2?family=Cairo:wght@400;700;900&display=swap');
        
        body {
            font-family: 'Cairo', sans-serif;
            background-color: #f8f9fa;
            color: #333;
        }
        .invoice-card {
            max-width: 800px;
            margin: 40px auto;
            background: #fff;
            padding: 40px;
            border-radius: 20px;
            box-shadow: 0 10px 30px rgba(0,0,0,0.1);
            position: relative;
            overflow: hidden;
        }
        .invoice-card::before {
            content: '';
            position: absolute;
            top: 0;
            left: 0;
            right: 0;
            height: 8px;
            background: linear-gradient(90deg, #0d6efd, #0dcaf0);
        }
        .invoice-header {
            display: flex;
            justify-content: space-between;
            align-items: center;
            border-bottom: 2px solid #f1f3f5;
            padding-bottom: 30px;
            margin-bottom: 30px;
        }
        .logo-area h1 {
            font-weight: 900;
            color: #0d6efd;
            margin: 0;
            font-size: 28px;
        }
        .logo-area p {
            margin: 0;
            color: #6c757d;
            font-size: 14px;
        }
        .invoice-title {
            text-align: left;
        }
        .invoice-title h2 {
            font-weight: 700;
            color: #212529;
            margin: 0;
            text-transform: uppercase;
        }
        .invoice-info {
            display: flex;
            justify-content: space-between;
            margin-bottom: 40px;
        }
        .info-block h6 {
            font-weight: 700;
            color: #6c757d;
            text-transform: uppercase;
            font-size: 12px;
            margin-bottom: 15px;
            letter-spacing: 1px;
        }
        .info-block p {
            margin: 2px 0;
            font-weight: 600;
        }
        .table-invoice {
            width: 100%;
            margin-bottom: 30px;
        }
        .table-invoice th {
            background-color: #f8f9fa;
            padding: 15px;
            border-bottom: 2px solid #dee2e6;
            color: #495057;
        }
        .table-invoice td {
            padding: 20px 15px;
            border-bottom: 1px solid #f1f3f5;
        }
        .total-section {
            display: flex;
            justify-content: flex-end;
            margin-top: 30px;
        }
        .total-box {
            background: #f8f9fa;
            padding: 20px;
            border-radius: 12px;
            min-width: 250px;
        }
        .total-row {
            display: flex;
            justify-content: space-between;
            margin-bottom: 10px;
        }
        .total-row.grand-total {
            margin-top: 15px;
            padding-top: 15px;
            border-top: 2px solid #dee2e6;
            font-size: 20px;
            font-weight: 900;
            color: #0d6efd;
        }
        .invoice-footer {
            margin-top: 50px;
            text-align: center;
            color: #adb5bd;
            font-size: 13px;
            border-top: 1px solid #f1f3f5;
            padding-top: 20px;
        }
        .print-btn-area {
            text-align: center;
            margin-bottom: 20px;
        }
        @@media print {
            .print-btn-area, .btn-back {
                display: none;
            }
            body {
                background-color: #fff;
            }
            .invoice-card {
                box-shadow: none;
                margin: 0;
                width: 100%;
                max-width: 100%;
            }
        }
        .status-badge {
            padding: 5px 15px;
            border-radius: 50px;
            font-size: 12px;
            font-weight: 700;
        }
        .bg-active { background-color: #e7f5ff; color: #0d6efd; }
        .bg-frozen { background-color: #fff4e6; color: #fd7e14; }
        .bg-expired { background-color: #fff5f5; color: #fa5252; }
    </style>
</head>
<body>

    <div class="container">
        <div class="mt-4 ms-4 btn-back">
            <a href="javascript:history.back()" class="btn btn-outline-secondary rounded-pill">
                <i class="fas fa-arrow-right me-2"></i> العودة
            </a>
        </div>

        <div class="invoice-card">
            <div class="invoice-header">
                <div class="logo-area">
                    <h1>@gymSettings.GymName.ToUpper()</h1>
                    <p>@Localizer["BuildingStrengthDefiningCharacter"]</p>
                </div>
                <div class="invoice-title">
                    <h2 class="text-primary">إيصال دفع</h2>
                    <p class="mb-0 text-muted">رقم العملية: #INV-@Model.MemberId-@DateTime.Now.ToString("yyyyMMdd-hhmm-tt")</p>
                    <p class="text-muted small">تاريخ الإصدار: @DateTime.Now.ToString("dd/MM/yyyy hh:mm tt")</p>
                </div>
            </div>

            <div class="invoice-info">
                <div class="info-block d-flex align-items-center">
                    @if (!string.IsNullOrEmpty(Model.MemberPhoto))
                    {
                        <img src="~/images/members/@Model.MemberPhoto" class="rounded me-3 shadow-sm" style="width: 60px; height: 60px; object-fit: cover;" alt="@Model.MemberName">
                    }
                    <div>
                        <h6>مقدم إلى العضو</h6>
                        <p class="fs-5 mb-0">@Model.MemberName</p>
                        <p class="text-muted small">@member?.Email</p>
                    </div>
                </div>
                <div class="info-block text-start">
                    <h6>تفاصيل الاشتراك</h6>
                    <p>الباقة: <span class="text-primary">@Model.PlanName</span></p>
                    <p>الحالة: <span class="status-badge bg-@(Model.Status.ToLower())">@Model.Status</span></p>
                    <p>صلاحية حتى: @Model.EndDate</p>
                </div>
            </div>

            <table class="table-invoice">
                <thead>
                    <tr>
                        <th class="text-end">الوصف</th>
                        <th class="text-center">المدة</th>
                        <th class="text-center">السعر</th>
                        <th class="text-start">الإجمالي</th>
                    </tr>
                </thead>
                <tbody>
                    <tr>
                        <td class="text-end">
                            <strong>اشتراك نادي رياضي - باقة @Model.PlanName</strong><br>
                            <small class="text-muted">تفعيل كامل لكافة المرافق والجلسات المشمولة</small>
                        </td>
                        <td class="text-center">@(plan?.DurationDays ?? 30) يوم</td>
                        <td class="text-center">@(plan?.Price.ToString("N2")) ج.م</td>
                        <td class="text-start">@(plan?.Price.ToString("N2")) ج.م</td>
                    </tr>
                </tbody>
            </table>

            <div class="total-section">
                <div class="total-box">
                    <div class="total-row">
                        <span>المبلغ الفرعي:</span>
                        <span>@(plan?.Price.ToString("N2")) ج.م</span>
                    </div>
                    <div class="total-row">
                        <span>الضريبة (0%):</span>
                        <span>0.00 ج.م</span>
                    </div>
                    <div class="total-row grand-total">
                        <span>الإجمالي:</span>
                        <span>@(plan?.Price.ToString("N2")) ج.م</span>
                    </div>
                </div>
            </div>

            <div class="mt-5">
                <h6 class="fw-bold text-secondary mb-3">شروط وأحكام:</h6>
                <ul class="small text-muted" style="padding-right: 20px;">
                    <li>هذا الإيصال صالح فقط بعد التأكد من تفعيل الاشتراك في النظام.</li>
                    <li>لا يمكن استرداد قيمة الاشتراك بعد مرور 3 أيام من التفعيل.</li>
                    <li>يمكن تجميد الاشتراك مرة واحدة فقط خلال فترة الباقة.</li>
                </ul>
            </div>

            <div class="invoice-footer">
                <p>شكراً لاختيارك @gymSettings.GymName. نتمنى لك رحلة تدريبية ممتعة!</p>
                <div class="mt-2">
                    <span class="mx-2"><i class="fas fa-phone me-1"></i> @gymSettings.Phone</span>
                    <span class="mx-2"><i class="fas fa-map-marker-alt me-1"></i> @gymSettings.Address</span>
                    @if (!string.IsNullOrEmpty(gymSettings.Email))
                    {
                        <span class="mx-2"><i class="fas fa-envelope me-1"></i> @gymSettings.Email</span>
                    }
                </div>
            </div>
        </div>

        <div class="print-btn-area d-flex justify-content-center gap-3">
            <button onclick="window.print()" class="btn btn-primary btn-lg rounded-pill px-5 shadow">
                <i class="fas fa-print me-2"></i> طباعة الإيصال
            </button>
            <form asp-action="SendReceiptEmail" method="post" class="d-inline">
                @Html.AntiForgeryToken()
                <input type="hidden" name="memberId" value="@Model.MemberId" />
                <input type="hidden" name="planId" value="@Model.PlanId" />
                <button type="submit" class="btn btn-outline-primary btn-lg rounded-pill px-5 shadow">
                    <i class="fas fa-envelope me-2"></i> إرسال عبر الإيميل
                </button>
            </form>
        </div>
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <script>
        document.addEventListener("DOMContentLoaded", function() {
            const successMsg = "@Html.Raw(TempData["SuccessMessage"])";
            const errorMsg = "@Html.Raw(TempData["ErrorMessage"])";
            
            if (successMsg && successMsg !== "null") {
                Swal.fire({
                    icon: 'success',
                    title: 'نجاح!',
                    text: successMsg,
                    confirmButtonText: 'حسناً',
                    customClass: {
                        confirmButton: 'btn btn-primary px-4 rounded-pill'
                    }
                });
            }
            if (errorMsg && errorMsg !== "null") {
                Swal.fire({
                    icon: 'error',
                    title: 'خطأ!',
                    text: errorMsg,
                    confirmButtonText: 'حسناً',
                    customClass: {
                        confirmButton: 'btn btn-primary px-4 rounded-pill'
                    }
                });
            }
        });
    </script>
</body>
</html>
