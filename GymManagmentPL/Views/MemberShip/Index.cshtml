@using GymManagmentDAL.Repositories.Interfaces
@model PagedResult<GymManagmentBLL.ViewModels.MemberShipViewModel.MemberShipViewModel>
@using Microsoft.Extensions.Localization
@inject IStringLocalizer<SharedResource> Localizer

@{
    ViewData["Title"] = Localizer["ActiveMemberships"];
    var expiringCount = ViewData["ExpiringCount"] as int? ?? 0;
}

<div class="row mb-4 align-items-center animate-fade-in">
    <div class="col-md-6">
        <h2 class="fw-bold mb-0">@Localizer["ActiveMemberships"]</h2>
        <p class="text-secondary">@Localizer["MembershipsDesc"]</p>
    </div>
    <div class="col-md-6 text-md-end mt-3 mt-md-0">
        <div class="d-flex justify-content-md-end align-items-center flex-wrap gap-2">
            <a asp-controller="Home" asp-action="Index" class="btn btn-outline-secondary shadow-sm rounded-pill px-4">
                <i class="fas fa-arrow-left me-2"></i> @Localizer["Dashboard"]
            </a>
            <div class="btn-group shadow-sm rounded-pill overflow-hidden">
                <a asp-action="Expiring" class="btn btn-outline-danger px-4 position-relative">
                    <i class="fas fa-history me-1"></i> @Localizer["ExpiringSoon"]
                    @if (expiringCount > 0)
                    {
                        <span class="position-absolute top-0 start-100 translate-middle badge rounded-pill bg-danger shadow-sm" style="z-index: 5;">
                            @expiringCount
                        </span>
                    }
                </a>
                <a asp-action="ExportToExcel" class="btn btn-outline-success px-4">
                    <i class="fas fa-file-excel me-1"></i> @Localizer["ExportExcel"]
                </a>
                <a asp-action="Create" class="btn btn-primary px-4">
                    <i class="fas fa-plus me-1"></i> @Localizer["NewMembership"]
                </a>
            </div>
        </div>
    </div>
</div>

<div class="premium-card p-0 overflow-hidden shadow-lg border-0 animate-fade-in">
    <div class="table-responsive">
        <table class="table table-hover align-middle mb-0">
            <thead>
                <tr>
                    <th class="ps-4">@Localizer["Member"]</th>
                    <th>@Localizer["Plan"]</th>
                    <th>@Localizer["Duration"]</th>
                    <th>@Localizer["Status"]</th>
                    <th class="text-center">@Localizer["Actions"]</th>
                </tr>
            </thead>
            <tbody>
                @if (Model.Items != null && Model.Items.Any())
                {
                    @foreach (var item in Model.Items)
                    {
                        <tr>
                            <td class="ps-4">
                                <div class="d-flex align-items-center">
                                    @if (!string.IsNullOrEmpty(item.MemberPhoto))
                                    {
                                        <div class="user-avatar-container me-3">
                                            <img src="~/images/members/@item.MemberPhoto" class="rounded-circle shadow-sm" style="width: 42px; height: 42px; object-fit: cover;" alt="@item.MemberName">
                                        </div>
                                    }
                                    else
                                    {
                                        <div class="icon-shape bg-primary bg-opacity-10 text-primary me-3" style="width: 38px; height: 38px;">
                                            <i class="fas fa-user"></i>
                                        </div>
                                    }
                                    <div>
                                        <div class="fw-bold">@item.MemberName</div>
                                        <small class="text-secondary">#@item.MemberId</small>
                                    </div>
                                </div>
                            </td>
                            <td>
                                <div class="d-flex align-items-center">
                                    <div class="bg-info bg-opacity-10 p-2 rounded me-2">
                                        <i class="fas fa-gem text-info"></i>
                                    </div>
                                    <span class="fw-medium">@item.PlanName</span>
                                </div>
                            </td>
                            <td>
                                <div class="small">
                                    <span class="text-muted">@Localizer["Starts"]:</span> <span class="text-main">@item.StartDate</span>
                                </div>
                                <div class="small">
                                    <span class="text-muted">@Localizer["Ends"]:</span> <span class="fw-bold text-main">@item.EndDate</span>
                                </div>
                            </td>
                            <td>
                                @if (item.DaysRemaining <= 5)
                                {
                                    <span class="badge bg-danger bg-opacity-10 text-danger border border-danger border-opacity-25 px-3 py-2 rounded-pill">
                                        <i class="fas fa-exclamation-triangle me-1"></i> @Localizer["ExpiringSoon"] (@item.DaysRemaining @Localizer["DaysShort"])
                                    </span>
                                }
                                else if (item.DaysRemaining <= 10)
                                {
                                    <span class="badge bg-warning bg-opacity-10 text-dark border border-warning border-opacity-25 px-3 py-2 rounded-pill">
                                        <i class="fas fa-clock me-1"></i> @Localizer["Watch"] (@item.DaysRemaining @Localizer["DaysShort"])
                                    </span>
                                }
                                else if (item.Status == "Frozen")
                                {
                                    <span class="badge bg-info bg-opacity-10 text-info border border-info border-opacity-25 px-3 py-2 rounded-pill">
                                        <i class="fas fa-snowflake me-1"></i> @Localizer["Frozen"]
                                    </span>
                                }
                                else
                                {
                                    <span class="badge bg-success bg-opacity-10 text-success border border-success border-opacity-25 px-3 py-2 rounded-pill">
                                        <i class="fas fa-check-circle me-1"></i> @Localizer["Active"]
                                    </span>
                                }
                            </td>
                            <td class="text-center">
                                <div class="btn-group">
                                    @if (item.Status == "Frozen")
                                    {
                                        <button type="button" class="btn btn-sm btn-outline-success unfreeze-membership-btn"
                                                data-member-id="@item.MemberId"
                                                data-plan-id="@item.PlanId"
                                                data-member-name="@item.MemberName"
                                                title="@Localizer["Unfreeze"]">
                                            <i class="fas fa-play"></i>
                                        </button>
                                    }
                                    else
                                    {
                                        <button type="button" class="btn btn-sm btn-outline-primary freeze-membership-btn"
                                                data-member-id="@item.MemberId"
                                                data-plan-id="@item.PlanId"
                                                data-member-name="@item.MemberName"
                                                title="@Localizer["Freeze"]">
                                            <i class="fas fa-snowflake"></i>
                                        </button>
                                    }
                                    <a asp-controller="Member" asp-action="Details" asp-route-id="@item.MemberId" class="btn btn-sm btn-outline-info" title="@Localizer["Details"]">
                                        <i class="fas fa-external-link-alt"></i>
                                    </a>
                                    <a asp-action="Receipt" asp-route-memberId="@item.MemberId" asp-route-planId="@item.PlanId" class="btn btn-sm btn-outline-secondary" title="@Localizer["PrintReceipt"]">
                                        <i class="fas fa-receipt"></i>
                                    </a>
                                    <button type="button" class="btn btn-sm btn-outline-danger cancel-membership-btn" 
                                            data-member-id="@item.MemberId"
                                            data-plan-id="@item.PlanId"
                                            data-member-name="@item.MemberName"
                                            title="@Localizer["Cancel"]">
                                        <i class="fas fa-times"></i>
                                    </button>
                                </div>
                            </td>
                        </tr>
                    }
                }
                else
                {
                    <tr>
                        <td colspan="5" class="text-center py-5">
                            <div class="py-5">
                                <div class="display-1 text-secondary opacity-25 mb-3">
                                    <i class="fas fa-id-card-alt"></i>
                                </div>
                                <h4 class="text-secondary">@Localizer["NoMembershipsFound"]</h4>
                                <p class="text-muted">@Localizer["NoMembershipsDesc"]</p>
                                <a asp-action="Create" class="btn btn-primary rounded-pill mt-3 px-5">@Localizer["ActivateFirstPlan"]</a>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

<!-- Pagination -->
@if (Model.TotalPages > 1)
{
    <nav class="mt-4">
        <ul class="pagination justify-content-center">
            <li class="page-item @(!Model.HasPreviousPage ? "disabled" : "")">
                <a class="page-link shadow-none" asp-action="Index" 
                   asp-route-pageNumber="@(Model.PageNumber - 1)" 
                   asp-route-searchTerm='@ViewData["SearchTerm"]'>@Localizer["Previous"]</a>
            </li>
            @for (int i = 1; i <= Model.TotalPages; i++)
            {
                <li class="page-item @(i == Model.PageNumber ? "active" : "")">
                    <a class="page-link shadow-none" asp-action="Index" 
                       asp-route-pageNumber="@i" 
                       asp-route-searchTerm='@ViewData["SearchTerm"]'>@i</a>
                </li>
            }
            <li class="page-item @(!Model.HasNextPage ? "disabled" : "")">
                <a class="page-link shadow-none" asp-action="Index" 
                   asp-route-pageNumber="@(Model.PageNumber + 1)" 
                   asp-route-searchTerm='@ViewData["SearchTerm"]'>@Localizer["Next"]</a>
            </li>
        </ul>
    </nav>
}

<!-- Hidden Forms -->
<form id="cancelForm" method="post" asp-action="Cancel" style="display:none;">
    @Html.AntiForgeryToken()
    <input type="hidden" name="memberId" id="cancelMemberId" />
    <input type="hidden" name="planId" id="cancelPlanId" />
</form>

<form id="unfreezeForm" method="post" asp-action="Unfreeze" style="display:none;">
    @Html.AntiForgeryToken()
    <input type="hidden" name="memberId" id="unfreezeMemberId" />
    <input type="hidden" name="planId" id="unfreezePlanId" />
</form>

<!-- Freeze Modal -->
<div class="modal fade" id="freezeModal" tabindex="-1" style="z-index: 1060;">
    <div class="modal-dialog modal-dialog-centered">
        <form asp-action="Freeze" method="post">
            <div class="modal-content border-0 shadow-lg overflow-hidden">
                <div class="modal-header bg-primary text-white border-0 py-3">
                    <h5 class="modal-title fw-bold"><i class="fas fa-snowflake me-2"></i> @Localizer["FreezeMembership"]</h5>
                    <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body p-4">
                    <p class="mb-4 text-main">@Localizer["FreezeWarningPart1"] <strong id="freezeTargetName" class="text-primary"></strong> @Localizer["FreezeWarningPart2"]</p>
                    
                    <input type="hidden" name="memberId" id="freezeMemberId" />
                    <input type="hidden" name="planId" id="freezePlanId" />
                    
                    <div class="mb-3">
                        <label class="form-label fw-bold small text-uppercase text-secondary">@Localizer["FreezeDurationDays"]</label>
                        <div class="input-group input-group-lg">
                            <span class="input-group-text border-end-0"><i class="fas fa-calendar-day text-secondary"></i></span>
                            <input type="number" name="durationDays" class="form-control border-start-0 fw-bold" value="7" min="1" required />
                        </div>
                        <div class="form-text mt-2 d-flex align-items-center">
                            <i class="fas fa-info-circle me-2 text-info"></i> <span>@Localizer["FreezeInfoText"]</span>
                        </div>
                    </div>
                </div>
                <div class="modal-footer border-top border-secondary border-opacity-10 px-4 py-3">
                    <button type="button" class="btn btn-link text-secondary text-decoration-none px-4" data-bs-dismiss="modal">@Localizer["Cancel"]</button>
                    <button type="submit" class="btn btn-primary rounded-pill px-5 fw-bold shadow-sm">
                        <i class="fas fa-check me-2"></i> @Localizer["ConfirmFreeze"]
                    </button>
                </div>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <script src="~/js/membership.js" asp-append-version="true"></script>
}
