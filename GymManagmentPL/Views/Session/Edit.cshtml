@inject IStringLocalizer<SharedResource> Localizer
@model UpdateSessionViewModel

@{
    ViewData["Title"] = Localizer["UpdateSessionSchedule"];
}

<div class="row mb-4 align-items-center">
    <div class="col-md-6">
        <nav aria-label="breadcrumb">
            <ol class="breadcrumb mb-2">
                <li class="breadcrumb-item"><a asp-action="Index" class="text-decoration-none">@Localizer["Sessions"]</a></li>
                <li class="breadcrumb-item active">@Localizer["EditSchedule"]</li>
            </ol>
        </nav>
        <h2 class="fw-bold mb-0">
            <i class="fas fa-calendar-alt text-primary me-2"></i>@Localizer["UpdateSession"]
        </h2>
    </div>
    <div class="col-md-6 text-md-end">
        <a asp-action="Index" class="btn btn-outline-secondary">
            <i class="fas fa-times me-2"></i>@Localizer["Cancel"]
        </a>
    </div>
</div>

<div class="row justify-content-center">
    <div class="col-lg-8">
        <div class="premium-card p-4 p-md-5">
            <form asp-action="Edit" method="post" id="sessionEditForm">
                <div asp-validation-summary="ModelOnly" class="text-danger mb-4"></div>

                <!-- Category Info (Read Only or Informational) -->
                <div class="alert alert-info bg-primary bg-opacity-10 border-0 p-4 rounded-4 mb-5">
                    <div class="d-flex align-items-center">
                        <div class="icon-shape bg-primary text-white me-3">
                            <i class="fas fa-info-circle"></i>
                        </div>
                        <div>
                            <h6 class="fw-bold mb-1">@Localizer["SessionInformation"]</h6>
                            <p class="text-secondary small mb-0">@Localizer["SessionEditNotice"]</p>
                        </div>
                    </div>
                </div>

                <!-- Trainer Section -->
                <div class="mb-5">
                    <label asp-for="TrainerId" class="form-label fw-bold small text-uppercase text-secondary">@Localizer["AssignedLeadTrainer"]</label>
                    <div class="input-group input-group-lg">
                        <span class="input-group-text bg-light border-end-0"><i class="fas fa-user-tie text-secondary"></i></span>
                        <select asp-for="TrainerId" asp-items="@ViewBag.Trainers" class="form-select border-start-0 shadow-none">
                            <option value="">@Localizer["SelectTrainer"]</option>
                        </select>
                    </div>
                    <span asp-validation-for="TrainerId" class="text-danger small"></span>
                </div>

                <!-- Description -->
                <div class="mb-5">
                    <label asp-for="Description" class="form-label fw-bold small text-uppercase text-secondary">@Localizer["UpdateDescription"]</label>
                    <textarea asp-for="Description" class="form-control" rows="3" placeholder="@Localizer["UpdateDescription"]"></textarea>
                    <span asp-validation-for="Description" class="text-danger small"></span>
                </div>

                <!-- Schedule Section -->
                <div class="p-4 bg-light rounded-4 mb-5">
                    <h6 class="fw-bold mb-4 text-primary"><i class="fas fa-clock me-2"></i>@Localizer["UpdateTimeSlots"]</h6>
                    <div class="row g-4">
                        <div class="col-md-6">
                            <label asp-for="StartDate" class="form-label fw-bold small text-uppercase text-secondary">@Localizer["StartTime"]</label>
                            <input asp-for="StartDate" type="datetime-local" class="form-control form-control-lg border-primary border-opacity-25" />
                            <span asp-validation-for="StartDate" class="text-danger small"></span>
                        </div>
                        <div class="col-md-6">
                            <label asp-for="EndDate" class="form-label fw-bold small text-uppercase text-secondary">@Localizer["EndTime"]</label>
                            <input asp-for="EndDate" type="datetime-local" class="form-control form-control-lg border-primary border-opacity-25" />
                            <span asp-validation-for="EndDate" class="text-danger small"></span>
                        </div>
                    </div>
                    <div class="mt-3 small text-muted">
                        <i class="fas fa-exclamation-circle me-1"></i> @Localizer["ScheduleEditWarning"]
                    </div>
                </div>

                <!-- Action Buttons -->
                <div class="d-flex justify-content-end gap-3 pt-4 border-top">
                    <a asp-action="Index" class="btn btn-outline-secondary px-5 py-2 rounded-pill fw-bold">
                        @Localizer["Back"]
                    </a>
                    <button type="submit" class="btn btn-primary px-5 py-2 rounded-pill fw-bold shadow-sm">
                        <i class="fas fa-save me-2"></i>@Localizer["SaveChanges"]
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}