@model GymManagmentBLL.ViewModels.MemberSessionViewModel.SessionMembersViewModel
@using Microsoft.Extensions.Localization
@inject IStringLocalizer<SharedResource> Localizer

@{
    ViewData["Title"] = Localizer["SessionMembers"];
}

<div class="row mb-4 align-items-center mt-4">
    <div class="col-md-6">
        <h2 class="fw-bold mb-0">@Model.SessionName</h2>
        <p class="text-secondary">@Localizer["SessionMembersDesc"]</p>
    </div>
    <div class="col-md-6 text-md-end">
        <a asp-action="Index" class="btn btn-outline-secondary shadow-sm rounded-pill px-4">
            <i class="fas fa-arrow-left me-2"></i> @Localizer["BackToSessions"]
        </a>
    </div>
</div>

<div class="premium-card p-0 shadow-lg border-0 overflow-hidden animate-fade-in">
    <div class="table-responsive">
        <table class="table table-hover align-middle mb-0">
            <thead class="bg-light">
                <tr>
                    <th class="ps-4">@Localizer["Member"]</th>
                    <th>@Localizer["BookingDate"]</th>
                    <th>@Localizer["AttendanceStatus"]</th>
                    <th class="text-center">@Localizer["Actions"]</th>
                </tr>
            </thead>
            <tbody>
                @if (Model.Bookings != null && Model.Bookings.Any())
                {
                    @foreach (var booking in Model.Bookings)
                    {
                        <tr>
                            <td class="ps-4">
                                <div class="d-flex align-items-center">
                                    <div class="icon-shape bg-primary bg-opacity-10 text-primary me-3" style="width: 38px; height: 38px;">
                                        <i class="fas fa-user"></i>
                                    </div>
                                    <div>
                                        <div class="fw-bold text-main">@booking.MemberName</div>
                                        <small class="text-secondary">#@booking.MemberId</small>
                                    </div>
                                </div>
                            </td>
                            <td>
                                <div class="text-main">@booking.BookingDate</div>
                            </td>
                            <td>
                                @if (booking.IsAttended)
                                {
                                    <span class="badge bg-success bg-opacity-10 text-success border border-success border-opacity-25 px-3 py-2 rounded-pill">
                                        <i class="fas fa-check-circle me-1"></i> @Localizer["Attended"]
                                    </span>
                                }
                                else
                                {
                                    <span class="badge bg-warning bg-opacity-10 text-warning border border-warning border-opacity-25 px-3 py-2 rounded-pill">
                                        <i class="fas fa-clock me-1"></i> @Localizer["Absent"]
                                    </span>
                                }
                            </td>
                            <td class="text-center">
                                <a asp-controller="Member" asp-action="Details" asp-route-id="@booking.MemberId" class="btn btn-sm btn-outline-info rounded-pill px-3">
                                    <i class="fas fa-external-link-alt me-1"></i> @Localizer["Profile"]
                                </a>
                            </td>
                        </tr>
                    }
                }
                else
                {
                    <tr>
                        <td colspan="4" class="text-center py-5">
                            <div class="py-4">
                                <i class="fas fa-users-slash display-4 mb-3 text-secondary opacity-25"></i>
                                <h5 class="text-secondary">@Localizer["NoMembersRegistered"]</h5>
                                <p class="text-muted">@Localizer["NoMembersRegisteredDesc"]</p>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
