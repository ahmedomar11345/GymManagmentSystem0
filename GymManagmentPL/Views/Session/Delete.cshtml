@inject IStringLocalizer<SharedResource> Localizer

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow-lg border-0 text-center">
                <div class="card-body p-5">
                    <div class="mb-4">
                        <i class="bi bi-exclamation-triangle-fill text-warning display-1"></i>
                    </div>

                    <h3 class="text-primary-color mb-3">@Localizer["DeleteSession"]</h3>

                    <div class="alert alert-warning text-start mb-4">
                        <strong><i class="bi bi-info-circle me-2"></i>@Localizer["Warning"]:</strong>
                        @Localizer["DeleteSessionWarning"]
                    </div>
                    <p class="text-muted mb-4">@Localizer["ConfirmDeleteSession"]</p>

                    <form asp-action="DeleteConfirmed" method="post">
                        <input type="hidden" name="id" value="@ViewBag.SessionId" />
                        <div class="d-flex justify-content-between gap-3">
                            <a asp-action="Index" class="btn btn-outline flex-fill">
                                <i class="bi bi-x-lg me-1"></i>@Localizer["Cancel"]
                            </a>
                            <button type="submit" class="btn btn-fill bg-danger border-danger flex-fill">
                                <i class="bi bi-trash me-1"></i>@Localizer["Delete"]
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>