@inject IStringLocalizer<SharedResource> Localizer
@model CreateSessionViewModel

@{
    ViewData["Title"] = Localizer["ScheduleNewSession"];
}

<div class="row mb-4 align-items-center">
    <div class="col-md-6">
        <nav aria-label="breadcrumb">
            <ol class="breadcrumb mb-2">
                <li class="breadcrumb-item"><a asp-action="Index" class="text-decoration-none">@Localizer["Sessions"]</a></li>
                <li class="breadcrumb-item active">@Localizer["NewSchedule"]</li>
            </ol>
        </nav>
        <h2 class="fw-bold mb-0">
            <i class="fas fa-calendar-plus text-primary me-2"></i>@Localizer["ScheduleSession"]
        </h2>
    </div>
    <div class="col-md-6 text-md-end">
        <a asp-action="Index" class="btn btn-outline-secondary">
            <i class="fas fa-times me-2"></i>@Localizer["Cancel"]
        </a>
    </div>
</div>

<div class="row justify-content-center">
    <div class="col-lg-8">
        <div class="premium-card p-4 p-md-5">
            <form asp-action="Create" method="post" id="sessionForm">
                <div asp-validation-summary="ModelOnly" class="text-danger mb-4"></div>

                <!-- Session Type & Trainer -->
                <div class="row g-4 mb-5">
                    <div class="col-md-6">
                        <label asp-for="CategoryId" class="form-label fw-bold small text-uppercase text-secondary">@Localizer["ClassCategory"]</label>
                        <div class="input-group input-group-lg">
                            <span class="input-group-text bg-light border-end-0"><i class="fas fa-tags text-secondary"></i></span>
                            <select asp-for="CategoryId" asp-items="@ViewBag.Categories" class="form-select border-start-0 shadow-none">
                                <option value="">@Localizer["SelectCategory"]</option>
                            </select>
                        </div>
                        <span asp-validation-for="CategoryId" class="text-danger small"></span>
                    </div>

                    <div class="col-md-6">
                        <label asp-for="TrainerId" class="form-label fw-bold small text-uppercase text-secondary">@Localizer["LeadTrainer"]</label>
                        <div class="input-group input-group-lg">
                            <span class="input-group-text bg-light border-end-0"><i class="fas fa-user-tie text-secondary"></i></span>
                            <select asp-for="TrainerId" asp-items="@ViewBag.Trainers" class="form-select border-start-0 shadow-none">
                                <option value="">@Localizer["SelectTrainer"]</option>
                            </select>
                        </div>
                        <span asp-validation-for="TrainerId" class="text-danger small"></span>
                    </div>
                </div>

                <!-- Description & Capacity -->
                <div class="mb-5">
                    <label asp-for="Description" class="form-label fw-bold small text-uppercase text-secondary">@Localizer["SessionDescription"]</label>
                    <textarea asp-for="Description" class="form-control mb-4" rows="3" placeholder="@Localizer["SessionDescription"]"></textarea>
                    <span asp-validation-for="Description" class="text-danger small"></span>

                    <div class="row">
                        <div class="col-md-4">
                            <label asp-for="Capacity" class="form-label fw-bold small text-uppercase text-secondary">@Localizer["MaxCapacity"]</label>
                            <div class="input-group">
                                <span class="input-group-text bg-light border-end-0"><i class="fas fa-users text-secondary"></i></span>
                                <input asp-for="Capacity" type="number" class="form-control border-start-0" placeholder="25" min="1" max="100" />
                            </div>
                            <span asp-validation-for="Capacity" class="text-danger small"></span>
                        </div>
                        <div class="col-md-8 pt-4">
                            <div class="alert alert-info py-2 px-3 border-0 bg-primary bg-opacity-10 text-primary small mt-1 mb-0">
                                <i class="fas fa-info-circle me-1"></i> @Localizer["CapacityNote"]
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Schedule -->
                <div class="p-4 bg-light rounded-4 mb-5">
                    <h6 class="fw-bold mb-4 text-primary"><i class="fas fa-clock me-2"></i>@Localizer["DateTimeSchedule"]</h6>
                    <div class="row g-4">
                        <div class="col-md-6">
                            <label asp-for="StartDate" class="form-label fw-bold small text-uppercase text-secondary">@Localizer["StartsAt"]</label>
                            <input asp-for="StartDate" type="datetime-local" class="form-control form-control-lg border-primary border-opacity-25" />
                            <span asp-validation-for="StartDate" class="text-danger small"></span>
                        </div>
                        <div class="col-md-6">
                            <label asp-for="EndDate" class="form-label fw-bold small text-uppercase text-secondary">@Localizer["EndsAt"]</label>
                            <input asp-for="EndDate" type="datetime-local" class="form-control form-control-lg border-primary border-opacity-25" />
                            <span asp-validation-for="EndDate" class="text-danger small"></span>
                        </div>
                    </div>
                </div>

                <!-- Recurrence -->
                <div class="p-4 border border-primary border-opacity-10 rounded-4 mb-5 bg-primary bg-opacity-10">
                    <div class="d-flex align-items-center mb-4">
                        <div class="icon-shape bg-primary text-white me-3" style="width: 45px; height: 45px; border-radius: 12px; display: flex; align-items: center; justify-content: center; box-shadow: 0 4px 12px rgba(13, 110, 253, 0.2);">
                            <i class="fas fa-sync-alt"></i>
                        </div>
                        <h6 class="fw-bold mb-0 text-primary text-uppercase letter-spacing-1">@Localizer["RepeatPattern"]</h6>
                    </div>
                    
                    <div class="row g-4 align-items-end">
                        <div class="col-md-6">
                            <label asp-for="RecurrenceType" class="form-label fw-bold small text-uppercase text-secondary">@Localizer["RepeatPattern"]</label>
                            <select asp-for="RecurrenceType" class="form-select border-primary border-opacity-25 shadow-none">
                                <option value="0">@Localizer["None"]</option>
                                <option value="1">@Localizer["Daily"]</option>
                                <option value="2">@Localizer["Weekly"]</option>
                                <option value="3">@Localizer["Monthly"]</option>
                            </select>
                            <span asp-validation-for="RecurrenceType" class="text-danger small"></span>
                        </div>
                        <div class="col-md-6" id="recurrenceCountWrapper" style="display:none;">
                            <label asp-for="RecurrenceCount" class="form-label fw-bold small text-uppercase text-secondary">@Localizer["RepeatFor"]</label>
                            <div class="input-group">
                                <input asp-for="RecurrenceCount" type="number" class="form-control border-primary border-opacity-25" min="2" max="52" value="4" />
                                <span class="input-group-text bg-white border-primary border-opacity-25 border-start-0 text-secondary small">@Localizer["Times"]</span>
                            </div>
                            <span asp-validation-for="RecurrenceCount" class="text-danger small"></span>
                        </div>
                    </div>
                    <div class="mt-3 small text-primary opacity-75">
                        <i class="fas fa-info-circle me-1"></i> @Localizer["RecurrenceNote"]
                    </div>
                </div>

                <!-- Buttons -->
                <div class="d-flex justify-content-end gap-3 pt-4 border-top">
                    <a asp-action="Index" class="btn btn-outline-secondary px-5 py-2 rounded-pill fw-bold transition-all">
                        @Localizer["Discard"]
                    </a>
                    <button type="submit" class="btn btn-primary px-5 py-2 rounded-pill fw-bold shadow-sm transition-all hover-lift">
                        @Localizer["ScheduleSession"]
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script>
        document.addEventListener("DOMContentLoaded", function () {
            const startInput = document.querySelector('input[name="StartDate"]');
            const endInput = document.querySelector('input[name="EndDate"]');

            if (!startInput || !endInput) return;

            const now = new Date();
            const localNow = new Date(now.getTime() - now.getTimezoneOffset() * 60000)
                .toISOString()
                .slice(0, 16);

            startInput.min = localNow;
            if (!startInput.value || startInput.value.startsWith("0001")) {
                startInput.value = localNow;
            }

            const updateEndMin = () => {
                endInput.min = startInput.value;
                if (endInput.value && endInput.value < startInput.value) {
                    endInput.value = "";
                }
            };

            startInput.addEventListener("change", updateEndMin);

            // Recurrence logic
            const recurrenceSelect = document.querySelector('select[name="RecurrenceType"]');
            const recurrenceWrapper = document.getElementById('recurrenceCountWrapper');
            
            if (recurrenceSelect && recurrenceWrapper) {
                const toggleRecurrence = () => {
                    if (recurrenceSelect.value !== "0") { // 0 is 'None'
                        recurrenceWrapper.style.display = 'block';
                    } else {
                        recurrenceWrapper.style.display = 'none';
                    }
                };
                
                recurrenceSelect.addEventListener('change', toggleRecurrence);
                toggleRecurrence(); // Run on load
            }
        });
    </script>
}